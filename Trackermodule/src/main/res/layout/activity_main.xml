                </LinearLayout>
                <TextView
                    android:id="@+id/pin_error"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp35"
                    android:drawablePadding="@dimen/dp10"
                    android:fontFamily="@font/montserrat"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="@string/otp_error"
                    android:textColor="@color/textColorError"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp35"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp25"
                    android:text="-or-"
                    android:textColor="@color/textColorDark"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp10"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center|left"
                    android:text="Patroller Mobile Number"
                    android:textColor="@color/textColorSoft"
                    android:textSize="@dimen/sp12" />

                <EditText
                    android:id="@+id/phoneno"
                    android:hint="Enter registered mobile number"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/edittext_back"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/dp10"
                    android:letterSpacing="0.1"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="@dimen/dp15"
                    android:layout_height="@dimen/dp40"
                    android:drawablePadding="@dimen/dp15"
                    android:drawableLeft="@drawable/group"/>

                <TextView
                    android:id="@+id/phone_error"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp35"
                    android:drawablePadding="@dimen/dp10"
                    android:fontFamily="@font/montserrat"
                    android:gravity="left"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="@string/phone_error"
                    android:textColor="@color/textColorError"
                    android:textSize="@dimen/sp12" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:fontFamily="@font/montserrat"
