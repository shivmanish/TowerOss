<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--    <style name="Base.Theme.BaseApplication" parent="Theme.Material3.DayNight.NoActionBar">-->
    <style name="Base.Theme.BaseApplication" parent="Theme.Material3.DayNight.NoActionBar"></style>

    <style name="Theme.MDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <declare-styleable name="PasswordEditText">
        <attr name="showDrawable" format="reference" />
        <attr name="hideDrawable" format="reference" />
        <attr name="drawableTintCompat" format="color|reference" />
    </declare-styleable>

    <style name="Theme.BaseApplication" parent="Base.Theme.BaseApplication">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="LanaguageSelectedText" parent="Widget.AppCompat.TextView">
        <item name="android:text">English</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#949191</item>
    </style>

    <style name="SettingGeneralText" parent="Widget.AppCompat.TextView">
        <item name="android:text">English</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableRight">@drawable/arrow_farword</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="Theme.MDemo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MDemo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MDemo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>