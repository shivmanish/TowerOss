<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="#DADADA"
    android:layout_marginBottom="@dimen/dp10"
    app:cardCornerRadius="@dimen/dp12"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_layout"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingEnd="@dimen/dp5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/alert_name"
            android:text="Add Site Nominals"
            android:textSize="15sp"
            style="@style/AutoResizeTextView"
            android:fontFamily="@font/poppins_semibold"
            android:paddingEnd="@dimen/dp5"
            android:paddingStart="@dimen/dp15"
            android:textColor="@color/light_gray"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="marquee"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/sender_lebel"
            android:text="Sender: "
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:textColor="@color/textGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="@dimen/dp15"
            android:ellipsize="marquee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_name"
            />
        <TextView
            android:id="@+id/sender_name"
            android:text="13 Dec 22;"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@+id/alert_name"
            app:layout_constraintStart_toEndOf="@+id/sender_lebel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/date_text_subtitle"
            android:text="13 Dec 22;"
            android:paddingLeft="@dimen/dp5"
            android:textSize="12sp"
            android:maxLength="12"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@+id/alert_name"
            app:layout_constraintStart_toEndOf="@+id/sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/clocktime_text_subtitle"
            android:text="10:00 am"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/dp4"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@+id/alert_name"
            app:layout_constraintStart_toEndOf="@+id/date_text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/site_id"
            android:text="Add Site Nominals"
            android:textSize="15sp"
            style="@style/AutoResizeTextView"
            android:fontFamily="@font/poppins_semibold"
            android:paddingEnd="@dimen/dp5"
            android:paddingStart="@dimen/dp15"
            android:textColor="@color/light_black"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="marquee"
            app:layout_constraintTop_toBottomOf="@+id/sender_lebel"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:paddingVertical="3dp"
            android:paddingHorizontal="@dimen/dp13"
            android:text="Action"
            style="@style/AutoResizeTextView"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:textSize="@dimen/dp14"
            android:background="@drawable/yellow_text_card"
            android:id="@+id/Alert_Action"
            android:layout_marginRight="10dp"
            android:textColor="@color/color1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>