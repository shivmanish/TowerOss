<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/iconBlack"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task \n SMRT Process Templates 1 Task2"
            android:textColor="@color/white"
            android:textSize="@dimen/dp17"
            android:id="@+id/title_text"
            android:layout_marginStart="@dimen/dp15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:visibility="gone"

            android:id="@+id/camera"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:adjustViewBounds="true"
            android:src="@drawable/qr_scanner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/add_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.421" />

        <ImageView
            android:id="@+id/add_image"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:padding="@dimen/dp5"
            android:adjustViewBounds="true"
            android:src="@drawable/mic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.421"
            android:layout_marginEnd="@dimen/dp20"/>

        <ImageView
            android:id="@+id/search"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginRight="@dimen/dp10"
            android:padding="@dimen/dp5"
            android:adjustViewBounds="true"
            android:src="@drawable/search"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/camera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.421" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <HorizontalScrollView
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/main_action_bar"
        android:id="@+id/horizontal_only"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <com.google.android.material.card.MaterialCardView
              android:layout_margin="@dimen/dp20"
              android:background="@drawable/dotted"

              android:layout_width="wrap_content"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:cardCornerRadius="15dp"
              app:cardElevation="@dimen/dp5"
              android:layout_marginBottom="39dp"
              android:layout_height="wrap_content">

              <LinearLayout
                  android:padding="@dimen/dp12"
                  android:orientation="horizontal"
                  android:weightSum="1"
                  android:gravity="center|center_vertical"
                  android:layout_gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <androidx.appcompat.widget.AppCompatTextView
                      android:id="@+id/Load"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/dp15"

                      android:gravity="start"
                      android:minWidth="@dimen/dp200"
                      android:text="Load Nominals"
                      android:textColor="@color/black"
                      android:textSize="@dimen/dp17"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />
                  <ImageView
                      android:layout_width="@dimen/dp30"
                      android:layout_height="@dimen/dp30"
                      android:layout_marginRight="@dimen/dp10"
                      android:padding="@dimen/dp5"
                      android:adjustViewBounds="true"
                      android:src="@drawable/ic_check_green"
                      app:tint="@color/green"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@+id/camera"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_bias="0.421" />
                  <ImageView

                      android:layout_width="@dimen/dp30"
                      android:layout_height="@dimen/dp30"
                      android:layout_marginRight="@dimen/dp10"
                      android:padding="@dimen/dp5"
                      android:adjustViewBounds="true"
                      android:src="@drawable/ic_sugggestion"

                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@+id/camera"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_bias="0.421" />
              </LinearLayout>

          </com.google.android.material.card.MaterialCardView>
          <com.google.android.material.card.MaterialCardView
              android:layout_margin="@dimen/dp20"

              android:layout_width="wrap_content"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:cardBackgroundColor="@color/bg_gray_card"
              app:cardCornerRadius="15dp"
              app:cardElevation="@dimen/dp5"
              android:layout_marginBottom="39dp"
              android:layout_height="wrap_content">

              <LinearLayout
                  android:padding="@dimen/dp12"
                  android:orientation="horizontal"
                  android:weightSum="1"
                  android:gravity="center|center_vertical"
                  android:layout_gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <androidx.appcompat.widget.AppCompatTextView

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/dp15"

                      android:gravity="start"
                      android:minWidth="@dimen/dp200"
                      android:text="Acquisition Su.."
                      android:textColor="@color/black"
                      android:textSize="@dimen/dp17"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />
                  <ImageView
                      android:layout_width="@dimen/dp30"
                      android:layout_height="@dimen/dp30"
                      android:layout_marginRight="@dimen/dp10"
                      android:padding="@dimen/dp5"
                      android:id="@+id/ic_circle"
                      android:adjustViewBounds="true"
                      android:src="@drawable/questions"

                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@+id/camera"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_bias="0.421" />
                  <ImageView

                      android:layout_width="@dimen/dp30"
                      android:layout_height="@dimen/dp30"
                      android:layout_marginRight="@dimen/dp10"
                      android:padding="@dimen/dp5"
                      android:adjustViewBounds="true"
                      android:src="@drawable/ic_sugggestion"

                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@+id/camera"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_bias="0.421" />
              </LinearLayout>

          </com.google.android.material.card.MaterialCardView>
          <com.google.android.material.card.MaterialCardView
              android:layout_margin="@dimen/dp20"

              android:layout_width="wrap_content"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:cardBackgroundColor="@color/bg_gray_card"
              app:cardCornerRadius="15dp"
              app:cardElevation="@dimen/dp5"
              android:layout_marginBottom="39dp"
              android:layout_height="wrap_content">

              <LinearLayout
                  android:padding="@dimen/dp12"
                  android:orientation="horizontal"
                  android:weightSum="1"
                  android:gravity="center|center_vertical"
                  android:layout_gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <androidx.appcompat.widget.AppCompatTextView

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/dp15"

                      android:gravity="start"
                      android:minWidth="@dimen/dp200"
                      android:text="OPCO Technical"
                      android:textColor="@color/black"
                      android:textSize="@dimen/dp17"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />
                  <ImageView
                      android:layout_width="@dimen/dp30"
                      android:layout_height="@dimen/dp30"
                      android:layout_marginRight="@dimen/dp10"
                      android:padding="@dimen/dp5"

                      android:adjustViewBounds="true"
                      android:src="@drawable/questions"

                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@+id/camera"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_bias="0.421" />
                  <ImageView

                      android:layout_width="@dimen/dp30"
                      android:layout_height="@dimen/dp30"
                      android:layout_marginRight="@dimen/dp10"
                      android:padding="@dimen/dp5"
                      android:adjustViewBounds="true"
                      android:src="@drawable/ic_sugggestion"

                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toStartOf="@+id/camera"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintVertical_bias="0.421" />
              </LinearLayout>

          </com.google.android.material.card.MaterialCardView>

      </LinearLayout>


    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:orientation="vertical"
        tools:itemCount="3"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_only"
        android:id="@+id/list_item"
        tools:listitem="@layout/task_list_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#FFD72B"
        app:cardCornerRadius="50dp"
        app:cardElevation="@dimen/dp5"
        android:layout_marginBottom="39dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="5dp"
            android:src="@drawable/ic_baseline_add_24_gray"
            android:layout_gravity="center"
            android:id="@+id/add_items_1"
            android:layout_width="50dp"
            android:layout_height="@dimen/dp50"
            />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>