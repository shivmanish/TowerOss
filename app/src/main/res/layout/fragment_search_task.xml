<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_bg"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingBottom="5dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="@dimen/dp35"
                        android:layout_marginLeft="@dimen/dp5"
                        android:adjustViewBounds="true"
                        android:paddingHorizontal="@dimen/dp7"
                        android:paddingBottom="@dimen/dp8"
                        android:layout_marginBottom="@dimen/dp8"
                        android:src="@drawable/ic_back"
                        app:tint="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/title_layout"
                        app:layout_constraintBottom_toBottomOf="@+id/title_layout"/>


                    <LinearLayout
                        android:id="@+id/title_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp8"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp8"
                        app:layout_constraintStart_toEndOf="@+id/back"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Load Nominals"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp14" />
                            <TextView
                                android:id="@+id/status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="(Pending...)"
                                android:textColor="@color/white"
                                android:layout_marginLeft="@dimen/dp3"
                                android:textSize="@dimen/sp14" />
                            <ImageView
                                android:src="@drawable/ic_sugggestion"
                                android:layout_marginLeft="@dimen/dp3"
                                android:layout_width="15dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="15dp"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="SLA : "
                                android:textColor="@color/milky_white"
                                android:textSize="@dimen/sp12"
                                android:textStyle="italic"/>

                            <TextView
                                android:id="@+id/sla"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="@dimen/dp2"
                                android:text="02"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/milky_white"
                                android:textSize="@dimen/dp12"
                                android:textStyle="italic" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/title_layout">

                        <TextView
                            android:id="@+id/closedby"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Closed by"
                            android:textColor="@color/milky_white"
                            android:textSize="@dimen/sp12" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Umesh Salunke"
                            android:textColor="@color/milky_white"
                            android:textSize="@dimen/sp12" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/dp10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp15"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date:"
                        android:textColor="#CCCCCC"
                        android:textSize="@dimen/dp12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="05-Oct-2018"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_weight="1"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closed date:"
                        android:textColor="#CCCCCC"
                        android:textSize="@dimen/dp12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:text="10-Nov-2018"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp12" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horizontal_only_list"
        android:requiresFadingEdge="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E9EEF7"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/cardtop"
        tools:ignore="MissingConstraints"
        tools:itemCount="1"
        tools:listitem="@layout/card_layout" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_only_list"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:statusBarScrim="@android:color/transparent">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp5"
                    android:background="@color/bg_card"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="@dimen/dp5"
                    app:layout_constraintEnd_toEndOf="parent">

                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_card">

                        <LinearLayout
                            android:id="@+id/topln"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_card"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp15"
                            android:paddingRight="@dimen/dp15"
                            android:paddingBottom="@dimen/dp10"
                            android:paddingTop="@dimen/dp10"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:paddingLeft="@dimen/dp5"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Site Info"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dp14"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:paddingLeft="@dimen/dp5"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="iBoard"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dp14"/>

                            <ImageView
                                android:visibility="gone"
                                android:layout_width="@dimen/dp25"
                                android:layout_height="@dimen/dp25"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:padding="@dimen/dp5"
                                android:src="@drawable/down_arrow"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/camera"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.421" />
                        </LinearLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/topln"
                            android:background="@drawable/dotted"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="@dimen/dp5"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/dp15"
                                android:paddingRight="@dimen/dp15"
                                android:scrollbars="vertical">
                                <GridLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:columnCount="2"
                                    android:layout_marginBottom="@dimen/dp10"
                                    android:orientation="horizontal"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <LinearLayout
                                        style="@style/ColumnItemInfo"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">


                                        <TextView
                                            android:id="@+id/ac_make"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/dp20"
                                            android:fontFamily="@font/poppins"
                                            android:text="Mangolpuri"
                                            android:textColor="@color/black" />
                                        <TextView
                                            style="@style/RowTextItemInfosmall"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Site Name" />

                                    </LinearLayout>

                                    <LinearLayout
                                        style="@style/ColumnItemInfo"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">


                                        <TextView
                                            android:id="@+id/ac_modal"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/dp20"
                                            android:fontFamily="@font/poppins"
                                            android:text="CE-MHMUMB-SC-A0123"
                                            android:textColor="@color/black" />
                                        <TextView
                                            style="@style/RowTextItemInfosmall"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Sit ID" />

                                    </LinearLayout>

                                    <LinearLayout
                                        style="@style/ColumnItemInfo"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/ac_Rating_capacity_kw"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/dp20"
                                            android:fontFamily="@font/poppins"
                                            android:text="Mangolpuri"
                                            android:textColor="@color/black" />
                                        <TextView
                                            style="@style/RowTextItemInfosmall"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Alternate Site name" />

                                    </LinearLayout>

                                    <LinearLayout
                                        style="@style/ColumnItemInfo"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">



                                        <TextView
                                            android:id="@+id/sd"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/dp20"
                                            android:fontFamily="@font/poppins"
                                            android:text="Under Construction"
                                            android:textColor="@color/black" />
                                        <TextView
                                            style="@style/RowTextItemInfosmall"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Site Status" />

                                    </LinearLayout>

                                    <LinearLayout
                                        style="@style/ColumnItemInfo"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">


                                        <TextView
                                            android:id="@+id/du"
                                            android:fontFamily="@font/poppins"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/dp20"
                                            android:text="RTP"
                                            android:textColor="@color/black" />

                                        <TextView
                                            style="@style/RowTextItemInfosmall"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Site Category" />

                                    </LinearLayout>

                                    <LinearLayout
                                        style="@style/ColumnItemInfo"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:fontFamily="@font/poppins"
                                            android:id="@+id/ac_indore_unit_weight"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/dp20"
                                            android:text="Smalll Cell"
                                            android:textColor="@color/black" />

                                        <TextView
                                            style="@style/RowTextItemInfosmall"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Site Type" />


                                    </LinearLayout>
                                </GridLayout>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:elevation="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp38"
                android:background="@color/tab_deselected"
                app:tabPaddingEnd="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                app:tabIndicatorColor="@color/yellow"
                app:tabGravity="fill"
                app:tabMode="scrollable"
                app:tabIndicatorHeight="3dp"
                app:tabBackground="@drawable/tab_color_selector"
                app:tabPaddingStart="@dimen/dp5"
                app:layout_constraintTop_toTopOf="parent"
                app:tabTextAppearance="@style/TabTextView"
                />
            <com.smarthub.baseapplication.widgets.NonDragableViewPager
                android:id="@+id/viewpager"
                android:paddingBottom="@dimen/dp110"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp2"
                android:layout_marginRight="@dimen/dp10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tabs" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/milky_white"
        android:paddingTop="@dimen/dp5"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/dp5"
            app:cardElevation="@dimen/dp10"
            android:outlineSpotShadowColor="@color/light_gray"
            android:outlineAmbientShadowColor="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/dropdown_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_up_faq"
                android:layout_marginTop="@dimen/dp2"
                android:paddingBottom="@dimen/dp9"
                android:paddingTop="@dimen/dp1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp30"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/submit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textblue"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingHorizontal="@dimen/dp23"
                    android:paddingVertical="@dimen/dp6"
                    android:textSize="@dimen/dp15"
                    android:layout_marginStart="@dimen/dp8"
                    android:layout_marginBottom="@dimen/dp10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/dot_1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="@dimen/dp2"
                    android:src="@drawable/circle_gray"
                    app:layout_constraintStart_toEndOf="@+id/submit_btn"
                    app:layout_constraintTop_toTopOf="@+id/submit_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/submit_btn"/>
                <View
                    android:id="@+id/dot_connecter_line"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="@color/light_gray"
                    app:layout_constraintStart_toEndOf="@+id/dot_1"
                    app:layout_constraintTop_toTopOf="@+id/dot_1"
                    app:layout_constraintBottom_toBottomOf="@+id/dot_1"/>
                <ImageView
                    android:id="@+id/dot_2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/circle_gray"
                    app:layout_constraintStart_toEndOf="@+id/dot_connecter_line"
                    app:layout_constraintTop_toTopOf="@+id/dot_1"
                    app:layout_constraintBottom_toBottomOf="@+id/dot_1"/>
                <TextView
                    android:id="@+id/close_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/yellow"
                    android:background="@drawable/rounded_textblue"
                    android:text="Close Task"
                    android:textColor="@color/color1"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingHorizontal="@dimen/dp11"
                    android:paddingVertical="@dimen/dp7"
                    android:textSize="@dimen/dp13"
                    android:layout_marginStart="@dimen/dp2"
                    app:layout_constraintStart_toEndOf="@+id/dot_2"
                    app:layout_constraintTop_toTopOf="@+id/submit_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/submit_btn"/>
                <ImageView
                    android:id="@+id/map_view"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_menu_map"
                    android:layout_marginEnd="@dimen/dp7"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/submit_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/submit_btn"/>
                <ImageView
                    android:id="@+id/messages"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/chat_icon"
                    app:layout_constraintEnd_toStartOf="@+id/map_view"
                    app:layout_constraintStart_toEndOf="@+id/close_btn"
                    app:layout_constraintTop_toTopOf="@+id/submit_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/submit_btn"/>
                <View
                    android:visibility="gone"
                    android:id="@+id/top_line"
                    android:alpha="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginBottom="@dimen/dp10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/submit_btn"
                   />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:id="@+id/collapsing_layout"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/dp7"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/top_line">
                    <TextView
                        android:id="@+id/task_start_date_time_lebel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task Start at : "
                        android:textSize="13dp"
                        android:textColor="@color/color1"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginStart="@dimen/dp10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/task_start_time"
                        app:layout_constraintBottom_toBottomOf="@+id/task_start_time"
                        />
                    <TextView
                        android:id="@+id/task_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02:12"
                        android:textSize="14dp"
                        android:textColor="@color/color1"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginStart="@dimen/dp1"
                        app:layout_constraintStart_toEndOf="@+id/task_start_date_time_lebel"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/time_date_seprater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=";"
                        android:textSize="14dp"
                        android:textColor="@color/color1"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginHorizontal="@dimen/dp2"
                        app:layout_constraintStart_toEndOf="@+id/task_start_time"
                        app:layout_constraintTop_toTopOf="@+id/task_start_time"
                        app:layout_constraintBottom_toBottomOf="@+id/task_start_time"/>
                    <TextView
                        android:id="@+id/task_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14-Feb-2023"
                        android:textSize="14dp"
                        android:textColor="@color/color1"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginStart="@dimen/dp1"
                        app:layout_constraintStart_toEndOf="@+id/time_date_seprater"
                        app:layout_constraintTop_toTopOf="@+id/task_start_time"
                        app:layout_constraintBottom_toBottomOf="@+id/task_start_time"/>
                    <TextView
                        android:id="@+id/start"
                        android:layout_width="wrap_content"
