<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/collapse_card_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <TextView
                android:id="@+id/item_title"
                android:text="Link Name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="@dimen/dp20"
                android:paddingEnd="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:background="@color/transparent"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".5"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/icon_layout"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:gravity="end"
                app:layout_constraintStart_toEndOf="@+id/item_title"
                app:layout_constraintEnd_toStartOf="@+id/img_dropdown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="0dp">
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/img_edit"
                    app:tint="@color/color1"
                    android:paddingStart="@dimen/dp16"
                    android:paddingEnd="@dimen/dp16"
                    android:paddingTop="@dimen/dp17"
                    android:paddingBottom="@dimen/dp17"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/edit_ico_black"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_dropdown"
                android:src="@drawable/ic_arrow_down_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="@dimen/dp18"
                android:paddingEnd="@dimen/dp18"
                android:paddingTop="@dimen/dp19"
                android:paddingBottom="@dimen/dp19"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_width="@dimen/dp50"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/item_line"
            android:alpha="2"
            android:background="@color/view_color"
            android:layout_height="1dp"
            android:layout_width="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:visibility="visible"
        android:id="@+id/item_collapse"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:columnCount="2"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Site Name"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txSiteName"
                    android:text="Mangolpuri"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Site ID"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txSiteID"
                    android:text="CE-MH-MUM-SC10123"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
              
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Site Status"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="On-Air"
                    android:id="@+id/site_status"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
              
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Site Category"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="On-Air"
                    android:id="@+id/site_category"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
              
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Site Type"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="On-Air"
                    android:id="@+id/site_type"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
              
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Site Ownership"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="On-Air"
                    android:id="@+id/site_ownership"
                    style="@style/RowTextviewItem"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
              
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Building Type"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txBuildingType"
                    android:text="Residential"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
              
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Location Zone"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtLocationZone"

                    android:text="Urban"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
              
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Maintenance Zone"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtMaintenanceZone"
                    android:hint="Thane"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
              
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Project Name"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtProjectName"
                    android:text="Coverage 1"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
              
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Site In-Charge Name"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtSiteInChargeName"
                    android:text="Praful SIngh"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
              
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Site In-Charge Number"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtSiteInChargeNumber"
                    android:text="9890000009"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
              
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Rent Escalation"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtRentEscalation"
                    android:text="10"
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
              
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                style="@style/ColumnItemInfo"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Rent Escalation Period"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtRentEscalationPeriod"
                    android:text=""
                    style="@style/RowTextviewItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
              
            </LinearLayout>

        </GridLayout>
        <TextView
            android:text="Address"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp15"
            style="@style/RowTextItemInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:text="369, Hazelnut, Eastern Expressway, Mumbai"
            style="@style/RowTextviewItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>