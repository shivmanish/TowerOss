<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingTop="@dimen/dp150">

    <ImageView
        android:id="@+id/ic_menu_close"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp25"
        android:background="@drawable/drawable_cross_back"
        android:padding="@dimen/dp5"
        android:src="@drawable/cross_ico"
        android:translationZ="@dimen/dp6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp5"
        android:translationZ="@dimen/dp5">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="match_parent"
            android:requiresFadingEdge="vertical">

            <LinearLayout
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item_collapse_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="@dimen/dp10"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <GridLayout
                        android:visibility="visible"
                        android:columnCount="2"
                        android:layout_marginBottom="@dimen/dp30"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="0dp"
                            style="@style/ColumnItemInfo"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Technology"
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:text="3G"
                                android:id="@+id/editTechnology"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <View
                                android:alpha="0.37"
                                android:background="#263238"
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp8" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            style="@style/ColumnItemInfo"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="RRU Count"
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:text="3G"
                                android:id="@+id/editRRUCount"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <View
                                android:alpha="0.37"
                                android:background="#263238"
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp8" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            style="@style/ColumnItemInfo"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Sectoc Count"
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:text="3G"
                                android:id="@+id/editSectocCount"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <View
                                android:alpha="0.37"
                                android:background="#263238"
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp8" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            style="@style/ColumnItemInfo"
                            android:layout_height="wrap_content">

                            <TextView
                                android:maxLines="1"
                                android:text="Max Antenna Height,AGL (m)"
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:hint=""
                                android:id="@+id/editMaxAntenna"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <View
                                android:alpha="0.37"
                                android:background="#263238"
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp8" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            style="@style/ColumnItemInfo"
                            android:layout_height="wrap_content">

                            <TextView
                                android:maxLines="1"
                                android:text="Antenna Type"
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:hint=""
                                android:id="@+id/editAntennaType"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <View
                                android:alpha="0.37"
                                android:background="#263238"
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp8" />
                        </LinearLayout>
                  <LinearLayout
                            android:layout_width="0dp"
                            style="@style/ColumnItemInfo"
                            android:layout_height="wrap_content">

                            <TextView
                                android:maxLines="1"
                                android:text="Tower/Pole Height"
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:hint=""
                                android:id="@+id/editTower"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <View
                                android:alpha="0.37"
                                android:background="#263238"
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp8" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            style="@style/ColumnItemInfo"
                            android:layout_height="wrap_content">

                            <TextView
                                android:maxLines="1"
                                android:text="Additional Pole Height"
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:hint=""
                                android:id="@+id/editAdditional"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <View
                                android:alpha="0.37"
                                android:background="#263238"
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp8" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            style="@style/ColumnItemInfo"
                            android:layout_height="wrap_content">

                            <TextView
                                android:maxLines="1"
                                android:text="Total Waight"
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:hint=""
                                android:id="@+id/editTotalWaight"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <View
                                android:alpha="0.37"
                                android:background="#263238"
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp8" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            style="@style/ColumnItemInfo"
                            android:layout_height="wrap_content">

                            <TextView
                                android:maxLines="1"
                                android:text="Offset Pole Count"
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:hint=""
                                android:id="@+id/editOffsetPoleCount"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <View
                                android:alpha="0.37"
                                android:background="#263238"
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp8" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            style="@style/ColumnItemInfo"
                            android:layout_height="wrap_content">

                            <TextView
                                android:maxLines="1"
                                android:text="Antenna Space"
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:hint=""
                                android:id="@+id/editAntennaSpace"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <View
                                android:alpha="0.37"
                                android:background="#263238"
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp8" />
                        </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            style="@style/ColumnItemInfo"
                            android:layout_height="wrap_content">

                            <TextView
                                android:maxLines="1"
                                android:text="Timeline"
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:hint=""
                                android:id="@+id/editTimeline"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <View
                                android:alpha="0.37"
                                android:background="#263238"
                                android:layout_height="1dp"
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/dp8" />
                        </LinearLayout>









                    </GridLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        style="@style/ColumnItemInfo"
                        android:layout_height="wrap_content">

                        <TextView
                            android:maxLines="1"
                            android:text="Remark"
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:hint=""
                            android:id="@+id/editRemark"
                            style="@style/RowTestItemEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <View
                            android:alpha="0.37"
                            android:background="#263238"
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp8" />
                    </LinearLayout>


                </LinearLayout>

                <include
                    android:id="@+id/include"
                    layout="@layout/cancel_update_layout"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>