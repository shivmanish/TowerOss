<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/login_bg"/>

    <ImageView
        android:id="@+id/back"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_back"
        android:layout_width="wrap_content"
        android:padding="@dimen/dp18"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="?attr/actionBarSize"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.88"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp40"
        app:layout_constraintBottom_toTopOf="@+id/sign_with_phone">

        <TextView
            android:text="Forgot password"
            android:textSize="@dimen/dp28"
            android:textColor="#ffffff"
            android:id="@+id/forgot_password_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:text="Enter your mobile number for get otp and access your account faster!"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:id="@+id/text_msg"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp5"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:fontFamily="@font/poppins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forgot_password_text"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mo_no_layout"
            app:layout_constraintTop_toBottomOf="@+id/text_msg">

            <com.smarthub.baseapplication.widgets.CustomTextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="+91"
                android:minWidth="@dimen/dp65"
                android:id="@+id/country_code_layout"
                android:textColorHint="@color/white"
                style="@style/TextInputLayout"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="@dimen/dp35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:padding="@dimen/dp10"
                    android:textColorHint="@color/white"
                    android:textSize="15sp"
                    android:letterSpacing="0.1"
                    android:textColor="#fff"
                    android:id="@+id/code"
                    android:nextFocusForward="@id/password"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/dp80"
                    android:paddingStart="@dimen/dp10"
                    android:gravity="center_vertical"
                    style="@style/CustomTextInputEdit"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/email_error"/>

            </com.smarthub.baseapplication.widgets.CustomTextInputLayout>

            <com.smarthub.baseapplication.widgets.CustomTextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter Mobile Number"
                android:id="@+id/user_mail_layout"
                android:textColorHint="@color/white"
                style="@style/TextInputLayout"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="@dimen/dp35"
                android:layout_marginStart="@dimen/dp10"
                app:layout_constraintStart_toEndOf="@+id/country_code_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.smarthub.baseapplication.widgets.CustomEditField
                    android:padding="@dimen/dp10"
                    android:textColorHint="@color/white"
                    android:textSize="15sp"
                    android:letterSpacing="0.1"
                    android:textColor="#fff"
                    android:id="@+id/mo_no_edit"
                    android:inputType="number"
                    android:nextFocusForward="@id/password"
                    android:drawablePadding="@dimen/dp10"
                    android:maxEms="10"
                    android:drawableEnd="@drawable/mo_no_next_outline"
                    android:layout_width="match_parent"
                    android:paddingStart="@dimen/dp10"
                    android:gravity="center_vertical"
                    style="@style/CustomTextInputEdit"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:fontFamily="@font/poppins_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/email_error"/>

            </com.smarthub.baseapplication.widgets.CustomTextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:text="Please enter one time password (OTP)"
            android:textSize="12sp"
            android:textColor="@color/disabledColor"
            android:id="@+id/one_time_otp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp40"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mo_no_layout"/>
        <LinearLayout
            android:id="@+id/otp_box"
            android:alpha="0.87"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/one_time_otp">

            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/p1"
                    android:maxLines="1"
                    android:ems="1"
                    android:text=""
                    android:enabled="false"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp7"
                    android:textSize="@dimen/dp20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_input"/>
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>
            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLines="1"
                    android:ems="1"
                    android:text=""
                    android:maxEms="1"
                    android:maxLength="1"
                    android:id="@+id/p2"
                    android:enabled="false"
                    android:nextFocusLeft="@id/p1"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp7"
                    android:textSize="@dimen/dp20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_input"/>
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>

            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/p3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp7"
                    android:background="@drawable/login_input"
                    android:ems="1"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:nextFocusLeft="@id/p2"
                    android:text=""
                    android:textSize="@dimen/dp20" />
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>
            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLines="1"
                    android:ems="1"
                    android:text=""
                    android:maxEms="1"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp7"
                    android:enabled="false"
                    android:textSize="@dimen/dp20"
                    android:id="@+id/p4"
                    android:nextFocusLeft="@id/p3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_input"/>
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>
            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLines="1"
                    android:ems="1"
                    android:text=""
                    android:maxEms="1"
                    android:nextFocusLeft="@id/p4"
                    android:maxLength="1"
                    android:inputType="number"
                    android:enabled="false"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp7"
                    android:textSize="@dimen/dp20"
                    android:id="@+id/p5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_input"/>
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>
            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLines="1"
                    android:ems="1"
                    android:text=""
                    android:maxEms="1"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp7"
                    android:enabled="false"
                    android:textSize="@dimen/dp20"
                    android:id="@+id/p6"
                    android:nextFocusLeft="@id/p5"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_input"/>
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>
        </LinearLayout>

        <TextView
            android:text="Didn't receive an OTP?"
            android:textSize="12sp"
            android:alpha="0.2"
            android:textColor="@color/white"
            android:id="@+id/mo_no_title"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp40"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otp_box"/>

        <TextView
            android:text="@string/resend_otp"
            android:textSize="13sp"
            android:alpha="0.2"
            android:textColor="@color/white"
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="@dimen/dp5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mo_no_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:padding="@dimen/dp10"
        android:text="Submit"
        android:textSize="15sp"
        android:textColor="#3F4D68"
        android:id="@+id/sign_with_phone"
        android:layout_width="0dp"
        android:textStyle="bold"
        android:layout_height="@dimen/dp45"
        android:gravity="center"
        android:alpha="0.2"
        app:layout_constraintWidth_percent="0.88"
        android:layout_marginBottom="@dimen/dp50"
        android:background="@drawable/login_yellow_bg"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>