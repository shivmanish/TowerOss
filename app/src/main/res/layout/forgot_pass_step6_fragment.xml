<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/white"
android:id="@+id/fragmentContainerView"
xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.88"
            android:layout_height="match_parent">

            <TextView
                android:text="New Credentials"
                android:textSize="16sp"
                android:textColor="#DE000000"
                android:id="@+id/forgot_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp50"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:text="Your identity has been verified! Set your new password"
                android:textSize="12sp"
                android:textColor="#8A000000"
                android:id="@+id/text_msg"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp30"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forgot_password_text"/>

            <TextView
                android:text="New Password"
                android:textSize="13sp"
                android:textColor="#8A000000"
                android:id="@+id/mo_no_title"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp50"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_msg"/>
            <com.smarthub.baseapplication.widgets.PasswordEditText
                android:text="***********"
                android:textSize="22sp"
                android:letterSpacing="0.4"
                android:textColor="#DEAAAAAA"
                android:id="@+id/mo_no_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:fontFamily="@font/montserrat"
                android:backgroundTint="#9B9B9B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mo_no_title"/>

            <TextView
                android:text="Confirm New Password"
                android:textSize="13sp"
                android:textColor="#8A000000"
                android:id="@+id/new_pass"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp25"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mo_no_edit"/>
            <com.smarthub.baseapplication.widgets.PasswordEditText
                android:text="***********"
                android:textSize="22sp"
                android:letterSpacing="0.4"
                android:textColor="#DEAAAAAA"
                android:id="@+id/new_pass_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:fontFamily="@font/montserrat"
                android:backgroundTint="#9B9B9B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_pass"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3D4E6D"
                android:id="@+id/next_layout"
                android:layout_marginTop="@dimen/dp60"
                android:background="@drawable/login_yellow_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_pass_edit">

                <TextView
                    android:padding="@dimen/dp10"
                    android:text="Update New Password"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/bt_next"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp50"
                    android:gravity="center"
                    android:backgroundTint="#3D4E6D"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableTint="#fff"
                    android:drawableEnd="@drawable/arrow_farword"
                    android:background="@drawable/login_yellow_bg"
                    android:fontFamily="@font/montserrat"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>