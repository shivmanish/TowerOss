<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginRight="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp5"
    android:elevation="@dimen/dp30"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_layout"
        android:background="@color/collapse_card_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45">
            <TextView
                android:id="@+id/item_title_str"
                android:text="Team"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/dp14"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/color1"
                android:background="@color/transparent"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".7"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/img_edit"
                android:visibility="visible"
                android:paddingStart="@dimen/dp16"
                android:paddingEnd="@dimen/dp16"
                android:paddingTop="@dimen/dp17"
                android:paddingBottom="@dimen/dp17"
                android:layout_gravity="center_vertical"
                android:src="@drawable/edit_ico_black"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toStartOf="@id/img_dropdown"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/dp12"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/dp50"
                app:tint="@color/light_gray" />
            <ImageView
                android:id="@+id/img_dropdown"
                android:src="@drawable/ic_arrow_down_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="@dimen/dp17"
                android:paddingEnd="@dimen/dp17"
                android:paddingTop="@dimen/dp17"
                android:paddingBottom="@dimen/dp17"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/dp50"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <View
        android:id="@+id/item_line"
        android:alpha="1"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        android:background="@color/view_color"
        android:layout_height="1dp"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/item_collapse"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_marginTop="@dimen/dp10"
        app:layout_constraintTop_toBottomOf="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginHorizontal="@dimen/dp8"
            android:layout_height="wrap_content">
            <TextView
                style="@style/RowTestItemEdit"
                android:text="Inside Premises"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/add_items_inside_layout"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="4dp"
                        android:src="@drawable/add"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="20dp"
                        android:background="@drawable/circleblue_1" />
                    <TextView
                        android:padding="5dp"
                        android:text="Add"
                        android:textSize="@dimen/dp15"
                        android:layout_marginRight="@dimen/dp10"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight=".5"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:textStyle="bold"
                android:text="Serial No."
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:text="External Structure Type"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:text="Distance from Centre (m)"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginEnd="@dimen/dp10"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:text="Height,\nAGL (m)"
                android:gravity="center"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp2"
            android:id="@+id/inside_premises_Table_Item"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp8"
            tools:itemCount="5"
            tools:listitem="@layout/inside_permises_table_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginHorizontal="@dimen/dp8"
            android:layout_height="wrap_content">
            <TextView
                style="@style/RowTestItemEdit"
                android:text="Outside Premises"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/add_items_outside_layout"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="4dp"
                        android:src="@drawable/add"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="20dp"
                        android:background="@drawable/circleblue_1" />
                    <TextView
                        android:padding="5dp"
                        android:text="Add"
                        android:textSize="@dimen/dp15"
                        android:layout_marginRight="@dimen/dp10"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight=".5"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:textStyle="bold"
                android:text="Serial No."
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:text="External Structure Type"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:text="Distance from Boundary (m)"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginEnd="@dimen/dp10"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:maxLines="2"
                android:ellipsize="marquee"
                android:text="Height,\nAGL (m)"
                android:gravity="center"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp2"
            android:id="@+id/outside_premises_Table_Item"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp8"
            tools:itemCount="5"
            tools:listitem="@layout/outside_permises_table_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>