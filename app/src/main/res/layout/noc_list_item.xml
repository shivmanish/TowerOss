<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10"
    app:cardCornerRadius="@dimen/dp5"
    app:cardElevation="@dimen/dp5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/top"
        android:layout_width="match_parent"


        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:layout_marginStart="@dimen/dp15"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_network_call"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/text_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_weight="2"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/menu"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:fontFamily="@font/poppins_regular"
                android:text="Reliance jio pvt ltd"
                android:textColor="@color/black"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="4567XCVG"
                android:textColor="@color/textGray"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

        <ImageView
            android:id="@+id/menu"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp15"
            android:adjustViewBounds="true"
            android:src="@drawable/dummy_3g"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:alpha="0.21"
            android:background="@color/tab_text_color"
            app:layout_constraintTop_toBottomOf="@+id/text_content" />

        <TextView
            android:id="@+id/text_rfi_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12dp"
            android:text="Status:- Valid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/text_rfs_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp15"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12dp"
            android:text="Issue Date: 10-Nov-2018"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/text_rfi_date"
            app:layout_constraintWidth_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>