<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rlParent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70"
            android:src="@drawable/circle"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="26dp"/>
        <TextView
            android:id="@+id/txtHeading"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="12dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="top"
            android:lineSpacingExtra="2sp"
            android:text="Global"
            android:textColor="#0EABB7"
            android:textSize="18sp"


            android:textStyle="bold"
            android:translationY="-0.97sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.062"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="26dp" />
        <TextView
            android:id="@+id/min_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"

            android:layout_toRightOf="@+id/txtHeading"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="top"
            android:lineSpacingExtra="2sp"
            android:text="|   24min ago"
            android:textColor="#8C9090"
            android:textSize="18sp"


            android:textStyle="bold"
            android:translationY="-0.97sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.062"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="26dp" />
        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"

            android:layout_below="@+id/txtHeading"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="top"
            android:lineSpacingExtra="2sp"
            android:text="Vivamus magna justo, lacinia eget consectetur sed, convallis at tellus. Proin eget tortor risus."
            android:textColor="#8C9090"
            android:textSize="18sp"

            android:layout_toRightOf="@+id/imageView1"
            android:textStyle="bold"
            android:translationY="-0.97sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.062"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="26dp" />
    </RelativeLayout>
    <TextView
        android:layout_below="@+id/rlParent"
        android:id="@+id/line_74"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="144dp"
        android:background="@drawable/line"
        />
</RelativeLayout>
</LinearLayout>