<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp15"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title1"
        android:textSize="18sp"
        android:textColor="#E03B58"
        android:text="250"
        android:maxLines="1"
        android:padding="0dp"
        android:layout_marginTop="@dimen/dp10"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/sub_title1"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="Over"
        android:maxLines="1"
        android:padding="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title1"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/status_title1"
        android:textSize="10sp"
        android:textColor="#9D9D9D"
        android:text="Due"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingStart="@dimen/dp3"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/sub_title1"
        app:layout_constraintTop_toTopOf="@+id/sub_title1"
        app:layout_constraintStart_toEndOf="@+id/sub_title1"/>

    <TextView
        android:id="@+id/title2"
        android:textSize="18sp"
        android:textColor="#F4C22B"
        android:text="75"
        android:maxLines="1"
        android:padding="0dp"
        android:layout_marginTop="@dimen/dp10"
        android:paddingStart="@dimen/dp10"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp15"
        app:layout_constraintStart_toEndOf="@+id/status_title1"/>
    <TextView
        android:id="@+id/sub_title2"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="Now"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingStart="@dimen/dp10"
        android:fontFamily="@font/poppins_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title2"
        app:layout_constraintStart_toStartOf="@+id/title2"/>
    <TextView
        android:id="@+id/status_title2"
        android:textSize="10sp"
        android:textColor="#9D9D9D"
        android:text="Due"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingStart="@dimen/dp3"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/sub_title2"
        app:layout_constraintTop_toTopOf="@+id/sub_title2"
        app:layout_constraintStart_toEndOf="@+id/sub_title2"/>

    <TextView
        android:id="@+id/title3"
        android:textSize="18sp"
        android:textColor="#748892"
        android:text="75"
        android:maxLines="1"
        android:padding="0dp"
        android:layout_marginTop="@dimen/dp10"
        android:paddingStart="@dimen/dp10"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp15"
        app:layout_constraintStart_toEndOf="@+id/status_title2"/>
    <TextView
        android:id="@+id/sub_title3"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="Now"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingStart="@dimen/dp10"
        android:fontFamily="@font/poppins_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title3"
        app:layout_constraintStart_toStartOf="@+id/title3"/>
    <TextView
        android:id="@+id/status_title3"
        android:textSize="10sp"
        android:textColor="#9D9D9D"
        android:text="Due"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingStart="@dimen/dp3"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/sub_title3"
        app:layout_constraintTop_toTopOf="@+id/sub_title3"
        app:layout_constraintStart_toEndOf="@+id/sub_title3"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/dp35"
        android:id="@+id/card_add"
        android:layout_height="@dimen/dp35"
        app:layout_constraintEnd_toStartOf="@+id/card_filter"
        app:cardCornerRadius="@dimen/dp5"
        app:cardBackgroundColor="#E9EEF7"
        android:layout_marginEnd="@dimen/dp10"
        app:layout_constraintTop_toTopOf="@+id/title1">

        <ImageView
            android:padding="@dimen/dp6"
            android:src="@drawable/add_card"
            app:tint="#3D4E6D"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/dp35"
        android:id="@+id/card_filter"
        android:layout_height="@dimen/dp35"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="@dimen/dp5"
        app:cardBackgroundColor="#E9EEF7"
        app:layout_constraintTop_toTopOf="@+id/title1">

        <ImageView
            android:padding="@dimen/dp6"
            android:src="@drawable/icon_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="vertical"
        tools:itemCount="5"
        tools:listitem="@layout/home_task_list_item"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/card_add"/>
</androidx.constraintlayout.widget.ConstraintLayout>