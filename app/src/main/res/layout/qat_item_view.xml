<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:background="#F1F1F1"
        android:id="@+id/expansion_top"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:tag="false"
            android:textStyle="bold"
            android:textColor="#4F4D4D"
            android:maxLines="1"
            android:background="#F1F1F1"
            android:drawablePadding="@dimen/dp15"
            android:drawableStart="@drawable/dot"
            android:text="Electircal / Civil Material"
            android:id="@+id/expansion_text"
            android:textSize="@dimen/sp12"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            app:drawableEndCompat="@drawable/arrow_farword" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:background="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@+id/expansion_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>