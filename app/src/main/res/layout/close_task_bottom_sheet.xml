<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <androidx.core.widget.NestedScrollView
       android:scrollbars="vertical"
       android:id="@+id/container_layout"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:scrollbars="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/ic_menu_close"
               android:translationZ="@dimen/dp6"
               android:layout_alignParentEnd="true"
               android:layout_marginEnd="@dimen/dp20"
               android:layout_width="@dimen/dp30"
               android:layout_height="@dimen/dp30"
               android:src="@drawable/cross_ico"
               android:padding="@dimen/dp5"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:background="@drawable/drawable_cross_back"/>
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_marginTop="@dimen/dp15"
               android:paddingBottom="@dimen/dp15"
               android:background="@drawable/dialog_bg"
               android:layout_width="match_parent"
               android:paddingLeft="@dimen/dp10"
               android:paddingRight="@dimen/dp5"
               android:layout_height="match_parent"
               app:layout_constraintTop_toTopOf="parent">
               <TextView
                   android:id="@+id/title_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp15"
                   android:text="Acqusition Site Survey "
                   android:textSize="18dp"
                   android:fontFamily="@font/poppins_semibold"
                   android:textColor="@color/light_black"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>
               <View
                   android:id="@+id/title_line"
                   android:alpha="0.37"
                   android:layout_marginTop="@dimen/dp5"
                   android:background="#263238"
                   android:layout_height="1dp"
                   android:layout_width="match_parent"
                   app:layout_constraintTop_toBottomOf="@+id/title_text"/>
               <TextView
                   android:id="@+id/title"
                   android:text="Task Instructions:"
                   android:layout_marginStart="@dimen/dp10"
                   style="@style/RowTextItemInfo"
                   android:layout_marginTop="@dimen/dp10"
                   android:textStyle="bold"
                   app:layout_constraintTop_toBottomOf="@+id/title_line"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <EditText
                   android:id="@+id/edit_title"
                   app:layout_constraintTop_toBottomOf="@+id/title"
                   android:hint="@string/type_here"
                   android:text="@string/choose_attachments"
                   android:paddingStart="@dimen/dp5"
                   style="@style/RowTestItemEdit"
                   android:textSize="@dimen/dp16"
                   android:paddingTop="0dp"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="@dimen/dp7"
                   android:layout_marginEnd="10dp"
                   android:layout_marginTop="@dimen/dp5"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <LinearLayout
                   android:id="@+id/layout1"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/edit_title"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp10"
                   android:orientation="horizontal">
                   <TextView
                       android:text="Site ID:"
                       android:layout_marginStart="@dimen/dp10"
                       style="@style/RowTextItemInfo"
                       android:textStyle="bold"
                       android:layout_weight="4"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                   <EditText
                       android:layout_width="match_parent"
                       style="@style/RowTestItemEdit"
                       android:textSize="@dimen/dp15"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="CE-MHMUM-SC-A0123"
                       />
               </LinearLayout>

               <GridLayout
                   android:visibility="visible"
                   android:columnCount="2"
                   android:id="@+id/grid"
                   app:layout_constraintTop_toBottomOf="@+id/layout1"
                   android:layout_marginTop="10dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:paddingTop="0dp"
                       android:layout_width="0dp"
                       style="@style/ColumnItemInfo"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="Start Date"
                           style="@style/RowTextItemInfo"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:text="10-Nov-22"
                           android:textSize="@dimen/dp15"
                           style="@style/RowTestItemEdit"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:paddingTop="0dp"
                       android:layout_width="0dp"
                       style="@style/ColumnItemInfo"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="End Date"
                           style="@style/RowTextItemInfo"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:textSize="@dimen/dp15"
                           android:text="12-Nov-22"
                           android:maxLength="10"
                           style="@style/RowTestItemEdit"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />
                   </LinearLayout>

                   <LinearLayout
                       android:paddingTop="0dp"
                       android:layout_width="0dp"
                       style="@style/ColumnItemInfo"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="Weightage  "
                           style="@style/RowTextItemInfo"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:text="10%"
                           android:textSize="@dimen/dp15"
                           style="@style/RowTestItemEdit"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:paddingTop="0dp"
                       android:layout_width="0dp"
                       style="@style/ColumnItemInfo"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="SLA"
                           style="@style/RowTextItemInfo"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:text="2 Days"
                           android:textSize="@dimen/dp15"
                           style="@style/RowTestItemEdit"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />
                   </LinearLayout>

                   <LinearLayout
                       android:paddingTop="0dp"
                       android:layout_width="0dp"
                       style="@style/ColumnItemInfo"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="Assignee Department"
                           style="@style/RowTextItemInfo"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:text="Acquisition"
                           style="@style/RowTestItemEdit"
                           android:textSize="@dimen/dp15"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:paddingTop="0dp"
                       android:layout_width="0dp"
                       style="@style/ColumnItemInfo"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="Assign To"
                           style="@style/RowTextItemInfo"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:text="XYZ"
                           style="@style/RowTestItemEdit"
                           android:textSize="@dimen/dp15"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />
                   </LinearLayout>

                   <LinearLayout
                       android:paddingTop="0dp"
                       android:layout_width="0dp"
                       style="@style/ColumnItemInfo"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="Priority"
                           style="@style/RowTextItemInfo"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:text="High"
                           style="@style/RowTestItemEdit"
                           android:textSize="@dimen/dp15"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />
                       <View
                           android:alpha="0.37"
                           android:visibility="gone"
                           android:background="#263238"
                           android:layout_height="1dp"
                           android:layout_width="match_parent"
                           android:layout_marginTop="@dimen/dp8" />
                   </LinearLayout>
                   <LinearLayout
                       android:paddingTop="0dp"
                       android:layout_width="0dp"
                       style="@style/ColumnItemInfo"
                       android:layout_height="wrap_content">

                       <TextView
                           android:text="Activities"
                           style="@style/RowTextItemInfo"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:text="Capture Site Data"
                           style="@style/RowTestItemEdit"
                           android:textSize="@dimen/dp15"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           />

                   </LinearLayout>
               </GridLayout>

               <TextView
                   android:id="@+id/textView1"
                   android:layout_width="0dp"
                   android:layout_marginStart="@dimen/dp5"
                   android:layout_height="wrap_content"
                   style="@style/RowTextItemInfo"
                   android:textSize="@dimen/dp15"
                   android:textColor="@color/text_color"
                   android:textStyle="bold"
                   android:text="Notification"
                   android:padding="5dp"
                   app:layout_constraintTop_toBottomOf="@+id/grid"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toStartOf="@+id/switch1"
                   android:textAppearance="?android:attr/textAppearanceMedium"/>
               <Switch
                   android:id="@+id/switch1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:switchMinWidth="56dp"
                   android:checked="true"
                   android:textOff="OFF"
                   android:textOn="ON"
                   android:layout_marginEnd="@dimen/dp10"
                   app:layout_constraintTop_toTopOf="@+id/textView1"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:theme="@style/MySwitch"/>

               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   style="@style/RowTextItemInfo"
                   android:textColor="@color/text_color"
                   android:textStyle="bold"
                   android:padding="5dp"
                   android:textSize="@dimen/dp15"
                   android:text="Reminder"
                   android:layout_marginTop="@dimen/dp10"
                   app:layout_constraintTop_toBottomOf="@+id/textView1"
                   app:layout_constraintEnd_toStartOf="@+id/switch1"
                   app:layout_constraintStart_toStartOf="@+id/textView1"
                   android:textAppearance="?android:attr/textAppearanceMedium"/>
               <Switch
                   android:id="@+id/switch2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:switchMinWidth="56dp"
                   android:checked="true"
                   android:textOff="OFF"
                   android:textOn="ON"
                   android:layout_marginEnd="@dimen/dp10"
                   app:layout_constraintBottom_toBottomOf="@+id/textView2"
                   app:layout_constraintTop_toTopOf="@+id/textView2"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:theme="@style/MySwitch"/>

               <TextView
                   android:id="@+id/textView3"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   style="@style/RowTextItemInfo"
                   android:textSize="@dimen/dp15"
                   android:textColor="@color/text_color"
                   android:textStyle="bold"
                   android:padding="5dp"
                   android:text="Auto Selection"
                   android:layout_marginTop="@dimen/dp5"
                   app:layout_constraintTop_toBottomOf="@+id/textView2"
                   app:layout_constraintEnd_toStartOf="@+id/switch1"
                   app:layout_constraintStart_toStartOf="@+id/textView1"
                   android:textAppearance="?android:attr/textAppearanceMedium"/>
               <Switch
                   android:id="@+id/switch3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:switchMinWidth="56dp"
                   android:checked="true"
                   android:textOff="OFF"
                   android:textOn="ON"
                   android:layout_marginEnd="@dimen/dp10"
                   app:layout_constraintBottom_toBottomOf="@+id/textView3"
                   app:layout_constraintTop_toTopOf="@+id/textView3"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:theme="@style/MySwitch"/>

               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/close_task_btn"
                   android:layout_width="wrap_content"
                   app:cardBackgroundColor="#FFD72B"
                   app:cardCornerRadius="6dp"
                   app:cardElevation="@dimen/dp5"
                   android:layout_marginTop="30dp"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginEnd="@dimen/dp15"
                   app:layout_constraintTop_toBottomOf="@+id/textView3">
                   <TextView
                       android:layout_marginEnd="@dimen/dp15"
                       android:padding="5dp"
                       android:text="Close task"
                       android:textStyle="bold"
                       android:gravity="center"
                       android:textSize="@dimen/dp14"
                       android:textColor="@color/card_bg"
                       android:layout_width="88dp"
                       android:layout_height="@dimen/dp32"
                       />

               </com.google.android.material.card.MaterialCardView>
           </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>