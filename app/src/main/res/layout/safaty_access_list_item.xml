<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/collapse_card_bg"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collapsing_layout"

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">

            <TextView
                android:id="@+id/item_title"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:paddingStart="@dimen/dp20"
                android:paddingTop="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:text="Link Name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".5" />

            <LinearLayout
                android:id="@+id/icon_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_dropdown"
                app:layout_constraintStart_toEndOf="@+id/item_title"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/img_edit"
                    app:tint="@color/color1"
                    android:paddingStart="@dimen/dp16"
                    android:paddingEnd="@dimen/dp16"
                    android:paddingTop="@dimen/dp17"
                    android:paddingBottom="@dimen/dp17"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/edit_ico_black"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_dropdown"
                android:src="@drawable/ic_arrow_down_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="@dimen/dp18"
                android:paddingEnd="@dimen/dp18"
                android:paddingTop="@dimen/dp19"
                android:paddingBottom="@dimen/dp19"
                android:layout_marginEnd="@dimen/dp8"
                android:layout_width="@dimen/dp50"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/item_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="2"
            android:background="@color/view_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_collapse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp15"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp10">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Physical Security" />

                    <TextView
                        android:id="@+id/physical_security"
                        style="@style/RowTextviewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gate &amp; Fence" />

                    <TextView
                        android:id="@+id/textGate"
                        style="@style/RowTextviewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video Monitoring" />

                    <TextView
                        android:id="@+id/video_monitoring_spinner"
                        style="@style/RowTextviewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Site Access Way" />

                    <TextView
                        android:id="@+id/site_access_area_spinner"
                        style="@style/RowTextviewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Danger Signage" />

                    <TextView
                        android:id="@+id/danger_signage_spinner"
                        style="@style/RowTextviewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Caution Signage" />

                    <TextView
                        android:id="@+id/textCautionSignage"
                        style="@style/RowTextviewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:layout_height="wrap_content"
                        android:text="Site Access Methodology" />

                    <TextView
                        android:id="@+id/textSiteAccesseethodology"
                        style="@style/RowTextviewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nearby Police Station" />

                    <TextView
                        android:id="@+id/textPoliceStation"
                        style="@style/RowTextviewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />


                </LinearLayout>

                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Police Station Number" />

                    <TextView
                        android:id="@+id/textPoliceNumber"
                        style="@style/RowTextviewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>
                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nearby Fire Station" />

                    <TextView
                        android:id="@+id/textFireStation"
                        style="@style/RowTextviewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />


                </LinearLayout>

                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fire Station Number" />

                    <TextView
                        android:id="@+id/textFireNumber"
                        style="@style/RowTextviewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

            </GridLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>