<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.utilites.dg.DGDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            android:id="@+id/card"
            app:cardCornerRadius="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@color/card_bg">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:paddingBottom="5dp">

                    <ImageView
                        android:layout_marginLeft="@dimen/dp8"
                        android:padding="@dimen/dp9"
                        android:id="@+id/back"
                        app:tint="@color/white"
                        android:src="@drawable/ic_back"
                        android:adjustViewBounds="true"
                        android:layout_width="@dimen/dp35"
                        android:layout_height="@dimen/dp35"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:paddingBottom="@dimen/dp10"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="DG"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp15" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="@font/poppins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:text="Count : 2"
                                android:textSize="@dimen/dp12"
                                android:textColor="@color/white"
                                android:textAppearance="@style/RowTextItemInfo"
                                android:lineSpacingExtra="2sp"
                                android:gravity="center_vertical"
                                />

                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/txtCardHeading2"
                                android:layout_width="@dimen/dp25"
                                android:layout_height="@dimen/dp25"
                                android:text="|"

                                android:textSize="12sp"
                                android:textColor="@android:color/white"
                                android:gravity="center"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:text="Capacity : 5kw"
                                android:textSize="@dimen/dp12"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/white"
                                android:textAppearance="@style/RowTextItemInfo"
                                android:lineSpacingExtra="2sp"
                                android:gravity="center_vertical"
                                />

                        </LinearLayout>


                    </LinearLayout>




                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"/>
                <LinearLayout
                    android:paddingTop="@dimen/dp5"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp35">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:textSize="@dimen/dp12"
                            android:text="Installation:"
                            android:textColor="#CCCCCC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="05-Oct-2018"
                            android:textSize="@dimen/dp12"
                            android:paddingStart="5dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="@dimen/dp12"
                            android:text="Last PM Date:"
                            android:textColor="#CCCCCC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="10-Nov-2018"
                            android:textSize="@dimen/dp12"
                            android:paddingStart="5dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/card"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp15">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp38"
                    android:background="@color/tab_deselected"
                    app:tabPaddingEnd="@dimen/dp5"
                    app:tabMaxWidth="0dp"
                    app:tabIndicatorColor="@color/yellow"
                    app:tabGravity="fill"
                    app:tabBackground="@drawable/tab_color_selector"
                    app:tabMode="fixed"
                    app:tabPaddingStart="@dimen/dp5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tabTextAppearance="@style/TabTextView"
                    />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tabs" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:id="@+id/add_more"
        android:adjustViewBounds="true"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        app:srcCompat="@drawable/ic_new_menu_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>