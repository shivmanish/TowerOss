<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp5"
    android:elevation="@dimen/dp30"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lst_item"
        android:background="@color/collapse_card_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_title_str"
                android:text="Link"
                android:textSize="@dimen/dp14"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:textStyle="bold"
                android:background="@color/transparent"
                style="@style/RowTestItemEdit"
                android:gravity="center_vertical"
                android:textColor="@color/color1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:orientation="horizontal">
            <ImageView
                android:visibility="invisible"
                android:id="@+id/edit_list_item"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/edit_ico_black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/item_title_dropdown"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rfEquipment_list_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down_black"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/item_line"
        android:alpha="2"
        app:layout_constraintTop_toBottomOf="@+id/lst_item"
        android:background="@color/view_color"
        android:layout_height="1dp"
        android:layout_width="match_parent"/>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/item_collapse"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                style="@style/ColumnItemInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Backhaul Technology" />

                <com.smarthub.baseapplication.widgets.CustomSpinner
                    android:id="@+id/spinBackhaulTechnology"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp20"
                    android:text="On-Air" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp8"
                    android:alpha="0.37"
                    android:background="#263238" />
            </LinearLayout>

            <LinearLayout
                style="@style/ColumnItemInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Link Count" />

                <com.smarthub.baseapplication.widgets.CustomSpinner
                    android:id="@+id/spinLinkCount"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp20"
                    android:text="On-Air" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp8"
                    android:alpha="0.37"
                    android:background="#263238" />
            </LinearLayout>
            <LinearLayout
                style="@style/ColumnItemInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FIber Pairs" />

                <com.smarthub.baseapplication.widgets.CustomSpinner
                    android:id="@+id/spinFIberPairs"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp20"
                    android:text="On-Air" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp8"
                    android:alpha="0.37"
                    android:background="#263238" />
            </LinearLayout>
            <LinearLayout
                style="@style/ColumnItemInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Antenna Size, Dia (m)" />

                <com.smarthub.baseapplication.widgets.CustomSpinner
                    android:id="@+id/spinAntennaSlotUsed"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp20"
                    android:text="On-Air" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp8"
                    android:alpha="0.37"
                    android:background="#263238" />
            </LinearLayout>
            <LinearLayout
                style="@style/ColumnItemInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Antenna Height, AGL (m)" />

                <com.smarthub.baseapplication.widgets.CustomSpinner
                    android:id="@+id/spinAntennaHight"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp20"
                    android:text="On-Air" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp8"
                    android:alpha="0.37"
                    android:background="#263238" />
            </LinearLayout>










        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>