<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_item"
    android:layout_margin="@dimen/dp10"
    app:cardElevation="@dimen/dp5"
    app:cardCornerRadius="@dimen/dp5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/top"
        android:padding="@dimen/dp10"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginStart="@dimen/dp15"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/dummy_network_call" />
        <LinearLayout
            android:id="@+id/text_content"
            app:layout_constraintStart_toEndOf="@+id/image"
            android:layout_width="0dp"
            app:layout_constraintEnd_toStartOf="@+id/menu"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titel"
                android:layout_marginEnd="@dimen/dp10"
                android:drawableRight="@drawable/ic_4g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Reliance jio pvt ltd"
                android:textColor="@color/black"
                android:textSize="@dimen/sp15" />
            <TextView
                android:id="@+id/Site_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="#DEL-VIL-SC-0001"
                android:textColor="@color/textGray"
                android:textSize="@dimen/sp12" />
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Smell"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/sp12" />
                <View
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="1dp"
                    android:background="#3D4E6D"
                    android:alpha="0.21"
                    android:layout_height="@dimen/dp20"/>
                <TextView
                    android:id="@+id/text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="ODC"
                    android:textColor="@color/tab_text_color"
                    android:textSize="@dimen/sp12" />
                <View
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="1dp"
                    android:background="#3D4E6D"
                    android:alpha="0.21"
                    android:layout_height="@dimen/dp20"/>
                <TextView
                    android:id="@+id/text9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Fiber"
                    android:textColor="@color/tab_text_color"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/menu"
            android:layout_width="20dp"
            android:visibility="gone"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp15"
            android:adjustViewBounds="true"
            android:src="@drawable/dummy_3g"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/divider"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/text_content"
            android:background="@color/tab_text_color"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha="0.21"/>

        <TextView
            android:layout_width="0dp"
            android:id="@+id/text_rfi_date"
            android:text="RFI Date 05-Oct-2018"
            android:layout_marginTop="@dimen/dp10"
            android:maxLength="20"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dp15"
            app:layout_constraintWidth_percent="0.5"/>
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:maxLength="20"
            android:id="@+id/text_rfs_date"
            app:layout_constraintTop_toTopOf="@+id/text_rfi_date"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            android:layout_height="wrap_content"
            android:text="RFS Date 10-Nov-2018"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/dp15"
            app:layout_constraintWidth_percent="0.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>