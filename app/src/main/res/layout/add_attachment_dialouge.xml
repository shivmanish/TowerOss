<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/cancel"
        android:translationZ="@dimen/dp7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:src="@drawable/cross_ico"
        android:padding="@dimen/dp5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/drawable_cross_back"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:minHeight="@dimen/dp400"
        android:background="@drawable/dialog_bg"
        android:layout_marginTop="@dimen/dp15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_layout"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:text="Attachment"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/light_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/title_line"
            android:alpha="0.37"
            android:layout_marginTop="@dimen/dp8"
            android:background="#263238"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text"/>
        <LinearLayout
            android:id="@+id/actions_layout"
            app:layout_constraintTop_toBottomOf="@+id/title_line"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:paddingHorizontal="@dimen/dp10"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/dp10"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btn_edit"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/document"
                    android:padding="@dimen/dp10"
                    android:background="@drawable/ic_bg_white_circle"
                    android:backgroundTint="@color/circle_color"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="Document"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/dp15"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    android:padding="@dimen/dp10"
                    android:background="@drawable/ic_bg_white_circle"
                    android:backgroundTint="@color/circle_color"
                    android:layout_marginBottom="@dimen/dp2"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="Camera"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/open_gallery"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/galary"
                    android:padding="@dimen/dp10"
                    android:background="@drawable/ic_bg_white_circle"
                    android:backgroundTint="@color/circle_color"
                    android:layout_marginBottom="@dimen/dp2"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="Gallary"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginHorizontal="@dimen/dp10"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/actions_layout">
            <LinearLayout
                android:id="@+id/attachment_layout"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/imageIcon"
                    android:layout_width="90dp"
                    android:background="@drawable/add_new_blank_border"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_menu_picture"
                    android:padding="@dimen/dp4"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/attachment_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:text="Title"
                    style="@style/RowTextItemInfo"
                    android:textSize="14dp"
                    android:paddingLeft="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="match_parent"
                    style="@style/RowTestItemEdit"
                    android:hint="Title"
                    android:textSize="@dimen/dp15"
                    android:paddingVertical="@dimen/dp3"
                    android:paddingHorizontal="@dimen/dp5"
                    android:background="@drawable/add_new_blank_border"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="@dimen/dp10"
                    android:text="File Detail *"
                    style="@style/RowTextItemInfo"
                    android:textSize="14dp"
                    android:paddingLeft="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="match_parent"
                    style="@style/RowTestItemEdit"
                    android:textSize="15dp"
                    android:paddingVertical="@dimen/dp3"
                    android:maxLines="2"
                    android:paddingHorizontal="@dimen/dp5"
                    android:background="@drawable/add_new_blank_border"
                    android:layout_height="55dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/bottom_layout"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:orientation="horizontal"
            android:padding="@dimen/dp5"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/main_layout"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp25"
                android:background="@drawable/yellow_text_button"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp16"
                android:paddingVertical="@dimen/dp5"
                android:text="Submit"
                android:textColor="@color/color1"
                android:textSize="@dimen/dp15" />

        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:background="@drawable/dialog_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ProgressBar
                android:id="@+id/progress"
                android:indeterminateTint="@color/tab_text_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/progress_text"
                android:text="Updating Data"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/sp17"
                android:layout_marginTop="@dimen/dp15"
                android:textColor="@color/tab_text_color"
                app:layout_constraintTop_toBottomOf="@+id/progress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>