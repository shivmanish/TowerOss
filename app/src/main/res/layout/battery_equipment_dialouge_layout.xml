<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingTop="@dimen/dp150">

    <ImageView
        android:id="@+id/canecl"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp25"
        android:background="@drawable/drawable_cross_back"
        android:padding="@dimen/dp5"
        android:src="@drawable/cross_ico"
        android:translationZ="@dimen/dp6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp5"
        android:translationZ="@dimen/dp5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:requiresFadingEdge="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item_collapse_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp10">

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Equipment Name" />

                                <com.smarthub.baseapplication.widgets.CustomSpinner
                                    android:id="@+id/spinEquipmentName"
                                    style="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Serial Number" />

                                <EditText
                                    android:id="@+id/editSerialNumber"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:hint="S3058940" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Make" />

                                <EditText
                                    android:id="@+id/editMake"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:hint="xxxx" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Model" />

                                <EditText
                                    android:id="@+id/editModel"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:hint="xxxx" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Rating/Capacity" />

                                <com.smarthub.baseapplication.widgets.CustomSpinner
                                    android:id="@+id/spinRationCapacity"
                                    style="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Manufacturing Month/Year" />

                                <EditText
                                    android:id="@+id/editManufacturingMonthYear"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:hint="Nov/2018" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Warranty Period" />

                                <EditText
                                    android:id="@+id/editWarrantyPeriod"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="xxxx" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Warranty Expiry Date" />

                                <EditText
                                    android:id="@+id/editWarrantyExpiryDate"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/icon_date"
                                    android:hint="10-Nov-22" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="SPD Type" />

                                <com.smarthub.baseapplication.widgets.CustomSpinner
                                    android:id="@+id/spinSPDType"
                                    style="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Protection Mode" />

                                <com.smarthub.baseapplication.widgets.CustomSpinner
                                    android:id="@+id/spinProtectionMode"
                                    style="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mounting Style" />

                                <com.smarthub.baseapplication.widgets.CustomSpinner
                                    android:id="@+id/spinMountingStyle"
                                    style="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Installation Point" />

                                <com.smarthub.baseapplication.widgets.CustomSpinner
                                    android:id="@+id/spinInstallationPoint"
                                    style="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Owner Company" />

                                <com.smarthub.baseapplication.widgets.CustomSpinner
                                    android:id="@+id/spinOwnerCompany"
                                    style="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Usage Type" />

                                <com.smarthub.baseapplication.widgets.CustomSpinner
                                    android:id="@+id/spinUsageType"
                                    style="@style/SpinnerTheme"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#263238" />
                            </LinearLayout>

                        </GridLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/canecel_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="#3D4E6D"
                        android:textSize="@dimen/dp15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp25"
                        android:background="@drawable/yellow_text_button"
                        android:paddingLeft="@dimen/dp25"
                        android:paddingTop="@dimen/dp8"
                        android:paddingRight="@dimen/dp25"
                        android:paddingBottom="@dimen/dp8"
                        android:text="Update"
                        android:textColor="#3D4E6D"
                        android:textSize="@dimen/dp15" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>