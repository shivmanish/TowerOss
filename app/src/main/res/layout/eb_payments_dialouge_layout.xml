<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingTop="@dimen/dp150">

    <ImageView
        android:id="@+id/canecl"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp25"
        android:background="@drawable/drawable_cross_back"
        android:padding="@dimen/dp5"
        android:src="@drawable/cross_ico"
        android:translationZ="@dimen/dp6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp5"
        android:translationZ="@dimen/dp5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:requiresFadingEdge="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item_collapse_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp10">

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Bill Number *" />

                                <com.smarthub.baseapplication.widgets.CustomSpinner
                                    style="@style/SpinnerTheme"
                                    android:id="@+id/bill_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="000001802484884"
                                    android:textColor="@color/black"/>

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Bill Amount" />

                                <EditText
                                    style="@style/RowTestItemEdit"
                                    android:id="@+id/bill_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="12181761"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Due Date" />

                                <TextView
                                    android:id="@+id/due_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="27-Nov-22"
                                    android:drawableEnd="@drawable/calender"

                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Payee Name" />

                                <TextView
                                    android:id="@+id/payee_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="27-Nov-22"
                                    android:drawableEnd="@drawable/calender"

                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Payment Date" />

                                <TextView
                                    android:id="@+id/payment_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="46582"
                                    android:drawableEnd="@drawable/calender"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Payment Amount" />

                                <TextView
                                    android:id="@+id/payment_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="27-Nov-22"
                                    android:drawableEnd="@drawable/calender"

                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Payment Status" />

                                <EditText
                                    style="@style/RowTestItemEdit"
                                    android:id="@+id/payment_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="27-Nov-22"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mode" />

                                <EditText
                                    style="@style/RowTestItemEdit"
                                    android:id="@+id/mode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="46737"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ref. No." />
                                <EditText
                                    style="@style/RowTestItemEdit"
                                    android:id="@+id/ref_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="3 Month"
                                    android:textColor="@color/black" />



                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Approval Status" />

                                <EditText
                                    style="@style/RowTestItemEdit"
                                    android:id="@+id/approval_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Approved Date" />


                                <EditText
                                    style="@style/RowTestItemEdit"
                                    android:id="@+id/approved_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="155"
                                    android:drawableEnd="@drawable/calender"
                                    android:textColor="@color/black" />


                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Approved By" />

                                <EditText
                                    style="@style/RowTestItemEdit"
                                    android:id="@+id/approved_by"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Umesha"
                                    android:textColor="@color/black" />


                            </LinearLayout>
                        </GridLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/canecel_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="#3D4E6D"
                        android:textSize="@dimen/dp15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp25"
                        android:background="@drawable/yellow_text_button"
                        android:paddingLeft="@dimen/dp25"
                        android:paddingTop="@dimen/dp8"
                        android:paddingRight="@dimen/dp25"
                        android:paddingBottom="@dimen/dp8"
                        android:text="Update"
                        android:textColor="#3D4E6D"
                        android:textSize="@dimen/dp15" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>