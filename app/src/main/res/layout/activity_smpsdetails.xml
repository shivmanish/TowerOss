<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:id="@+id/card"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/card_bg">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp10"
                android:paddingEnd="@dimen/dp15"
                android:paddingBottom="5dp">

                <ImageView
                    android:layout_marginLeft="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp10"
                    android:padding="@dimen/dp7"
                    android:id="@+id/back"
                    app:tint="@color/white"
                    android:src="@drawable/ic_back"
                    android:adjustViewBounds="true"
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/dp35"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:paddingBottom="@dimen/dp8"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="SMPS"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp16" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/poppins"
                            android:textStyle="italic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:text="Count :"
                            android:textSize="@dimen/dp13"
                            android:textColor="@color/white"
                            android:textAppearance="@style/RowTextItemInfo"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textStyle="italic"
                            android:textSize="@dimen/dp13"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:id="@+id/mark4" />
                        <TextView
                            android:layout_marginStart="@dimen/dp5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "
                            android:textSize="@dimen/dp13"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@color/white"
                            android:textAppearance="@style/RowTextItemInfo"
                            android:lineSpacingExtra="1sp"
                            android:gravity="center_vertical"
                            />

                        <TextView
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:text="Capacity : "
                            android:textStyle="italic"
                            android:textSize="@dimen/dp13"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/white"
                            android:lineSpacingExtra="2sp"
                            android:gravity="center_vertical"
                            />
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 kw"
                            android:lineSpacingExtra="2sp"
                            android:textStyle="italic"
                            android:textSize="@dimen/dp13"
                            android:textColor="@color/white"
                            android:gravity="center" />

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="@dimen/dp24"
                    android:layout_height="@dimen/dp24"
                    android:paddingTop="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingLeft="@dimen/dp5"
                    android:rotation="90"
                    app:tint="@color/white"
                    android:src="@drawable/menu" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/dp10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginStart="@dimen/dp15"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="@dimen/dp12"
                        android:text="Installation Date:"
                        android:textColor="#CCCCCC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="05-Oct-2018"
                        android:textSize="@dimen/dp12"
                        android:paddingStart="5dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="@dimen/dp12"
                        android:text="Last PM Date:"
                        android:textColor="#CCCCCC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="10-Nov-2018"
                        android:textSize="@dimen/dp12"
                        android:paddingStart="5dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:elevation="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp38"
        android:background="@color/tab_deselected"
        app:tabPaddingEnd="@dimen/dp5"
        app:tabIndicatorColor="@color/yellow"
        app:tabGravity="fill"
        app:tabBackground="@drawable/tab_color_selector"
        app:tabPaddingStart="@dimen/dp5"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:tabTextAppearance="@style/TabTextView"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabs" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/add_more"
        android:adjustViewBounds="true"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        app:srcCompat="@drawable/ic_new_menu_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>