<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:id="@+id/card"
        android:layout_margin="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#C4D3EE">
        <LinearLayout
            android:id="@id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp15">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_network_call" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Reliance jio pvt ltd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp15" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Smell"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/sp12" />
                    <View
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="1dp"
                        android:background="#3D4E6D"
                        android:alpha="0.21"
                        android:layout_height="@dimen/dp20"/>
                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="ODC"
                        android:textColor="@color/tab_text_color"
                        android:textSize="@dimen/sp12" />
                    <View
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_width="1dp"
                        android:background="#3D4E6D"
                        android:alpha="0.21"
                        android:layout_height="@dimen/dp20"/>
                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Fiber"
                        android:textColor="@color/tab_text_color"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/menu"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="center"
                android:paddingTop="@dimen/dp5"
                android:paddingBottom="@dimen/dp5"
                android:paddingLeft="@dimen/dp5"
                android:rotation="90"
                android:src="@drawable/dummy_3g" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp38"
        android:background="@color/tab_deselected"
        android:layout_gravity="bottom"
        app:tabMode="fixed"
        app:tabPaddingEnd="@dimen/dp5"
        app:tabPaddingStart="@dimen/dp5"
        app:layout_constraintTop_toBottomOf="@+id/card"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs" />

</androidx.constraintlayout.widget.ConstraintLayout>