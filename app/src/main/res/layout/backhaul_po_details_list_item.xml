<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:orientation="horizontal"
        android:background="@color/collapse_card_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_title_str"
                android:text="ODU"
                android:textSize="@dimen/dp14"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:textStyle="bold"
                android:background="@color/transparent"
                style="@style/RowTestItemEdit"
                android:gravity="center_vertical"
                android:textColor="@color/color1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="4"
            android:orientation="horizontal">
            <ImageView
                android:visibility="invisible"
                android:layout_margin="@dimen/dp5"
                android:id="@+id/edit_list_item"
                android:layout_width="match_parent"
                android:padding="@dimen/dp8"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/edit_ico_black" />

            <ImageView
                android:visibility="invisible"
                android:layout_margin="@dimen/dp5"
                android:id="@+id/delet_list_item"
                android:layout_width="match_parent"
                android:padding="@dimen/dp8"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete" />

            <ImageView
                android:visibility="invisible"
                android:layout_margin="@dimen/dp5"
                android:id="@+id/add_more_list_item"
                android:layout_width="match_parent"
                android:padding="@dimen/dp8"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/add_ico" />

            <ImageView
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginRight="@dimen/dp10"
                android:id="@+id/item_title_dropdown"
                android:padding="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_down_black" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/item_line"
        android:alpha="2"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        android:background="@color/view_color"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        />


    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:id="@+id/item_collapse"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/includedLayout"
                layout="@layout/po_details">

            </include>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>