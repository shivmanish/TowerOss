<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="#DADADA"
    android:layout_marginBottom="@dimen/dp10"
    app:cardCornerRadius="@dimen/dp12"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_layout"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingEnd="@dimen/dp5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/Indicator_line"
            android:layout_width="3dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/yellow"
            android:outlineSpotShadowColor="@color/white"
            android:alpha="2"
            />
        <TextView
            android:id="@+id/task_name"
            android:text="Add Site Nominals"
            android:textSize="14sp"
            style="@style/AutoResizeTextView"
            android:fontFamily="@font/poppins_semibold"
            android:paddingEnd="@dimen/dp5"
            android:paddingStart="@dimen/dp10"
            android:textColor="#3F3F3F"
            android:alpha="0.8"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="marquee"
            app:layout_constraintEnd_toStartOf="@+id/task_close"
            app:layout_constraintBottom_toBottomOf="@+id/task_close"
            app:layout_constraintStart_toEndOf="@+id/Indicator_line"/>
        <TextView
            android:id="@+id/item_title_text_h"
            android:text="Acquistion"
            android:textSize="12sp"
            android:paddingEnd="@dimen/dp10"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:textColor="@color/green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="@dimen/dp10"
            android:ellipsize="marquee"
            app:layout_constraintEnd_toStartOf="@+id/icon_layout"
            app:layout_constraintStart_toEndOf="@+id/Indicator_line"
            app:layout_constraintTop_toBottomOf="@+id/task_name"
            android:layout_marginTop="@dimen/dp5"/>
        <TextView
            android:padding="5dp"
            android:text="Close task"
            style="@style/AutoResizeTextView"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:textSize="@dimen/dp12"
            android:id="@+id/task_close"
            android:layout_marginRight="10dp"
            android:textColor="@color/card_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:id="@+id/icon_layout"
            android:layout_marginTop="@dimen/dp8"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_close">
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/person_task_item"
                android:layout_width="@dimen/dp18"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edit_task_item_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"
                android:src="@drawable/user_add"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/edit_task_item_layout"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/task_list_dropdown"
                android:layout_height="@dimen/dp24"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/edit_task_item"
                    android:layout_width="@dimen/dp24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="@dimen/dp24"
                    android:text="M"
                    android:gravity="center"
                    style="@style/AutoResizeTextView"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/circleblue_1"
                    android:backgroundTint="#818181"
                    />
                <com.google.android.material.card.MaterialCardView
                    android:visibility="visible"
                    android:padding="6dp"
                    android:id="@+id/btn_edit_card"
                    android:layout_width="@dimen/dp20"
                    app:layout_constraintStart_toEndOf="@+id/edit_task_item"
                    android:layout_height="@dimen/dp20"
                    app:cardCornerRadius="@dimen/dp50"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/color1"
                    app:strokeColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/edit_task_item"
                    app:layout_constraintBottom_toBottomOf="@+id/edit_task_item">
                    <ImageView
                        android:padding="6dp"
                        android:id="@+id/btn_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_edit_menu"
                        app:tint="@color/white" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/task_list_dropdown"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/dp7"
                android:paddingTop="@dimen/dp7"
                android:paddingBottom="@dimen/dp7"
                android:text="Due On: "
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/task_due_data"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_down_black"
                />
            <TextView
                android:id="@+id/task_due_data"
                android:layout_width="wrap_content"
                android:paddingEnd="@dimen/dp7"
                android:paddingTop="@dimen/dp7"
                android:paddingBottom="@dimen/dp7"
                android:text="10-Nov-22"
                android:textSize="10sp"
                android:maxLength="10"
                android:ellipsize="end"
                android:textColor="@color/search_background"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_down_black"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>