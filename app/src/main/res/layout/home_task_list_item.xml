<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="#DADADA"
    android:layout_marginBottom="@dimen/dp10"
    app:cardCornerRadius="@dimen/dp12"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_layout"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingStart="@dimen/dp5"
        android:paddingEnd="@dimen/dp5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/dp5"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:id="@+id/item_title_str"
            app:layout_constraintWidth_percent="0.4"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/item_title_text"
                android:text="Add Site Nominals"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"
                android:paddingEnd="@dimen/dp5"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/item_title_text_h"
                android:text="Acquistion"
                android:textSize="12sp"
                android:paddingEnd="@dimen/dp10"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:textColor="@color/green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/item_title_str"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            app:cardBackgroundColor="#FFD72B"
            app:cardCornerRadius="6dp"
            app:cardElevation="@dimen/dp5"
            android:id="@+id/task_close"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:padding="5dp"
                android:text="Close task"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:textSize="@dimen/dp12"
                android:textColor="@color/card_bg"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:id="@+id/icon_layout"
            android:layout_marginTop="@dimen/dp8"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/item_title_str"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_close">
            <ImageView
                android:padding="5dp"
                android:id="@+id/person_task_item"
                android:layout_width="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/edit_task_item_layout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="30dp"
                android:src="@drawable/user_add"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/edit_task_item_layout"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/task_list_dropdown"
                android:layout_height="30dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/edit_task_item"
                    android:layout_width="@dimen/dp30"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="@dimen/dp30"
                    android:text="M"
                    android:gravity="center"
                    style="@style/AutoResizeTextView"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/circleblue_1"
                    android:backgroundTint="#818181"
                    />
                <com.google.android.material.card.MaterialCardView
                    android:visibility="visible"
                    android:padding="6dp"
                    android:id="@+id/btn_edit_card"
                    android:layout_width="@dimen/dp20"
                    app:layout_constraintStart_toEndOf="@+id/edit_task_item"
                    android:layout_height="@dimen/dp20"
                    app:cardCornerRadius="@dimen/dp50"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/color1"
                    app:strokeColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/edit_task_item"
                    app:layout_constraintBottom_toBottomOf="@+id/edit_task_item">
                    <ImageView
                        android:padding="6dp"
                        android:id="@+id/btn_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_edit_menu"
                        app:tint="@color/white" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/task_list_dropdown"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/dp7"
                android:paddingTop="@dimen/dp7"
                android:paddingBottom="@dimen/dp7"
                android:text="Due On: "
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/task_list_date"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_down_black"
                />
            <TextView
                android:id="@+id/task_list_date"
                android:layout_width="wrap_content"
                android:paddingEnd="@dimen/dp7"
                android:paddingTop="@dimen/dp7"
                android:paddingBottom="@dimen/dp7"
                android:text="10-Nov-22"
                android:textColor="@color/search_background"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_down_black"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>