<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:paddingLeft="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:gravity="center"
        android:layout_alignBaseline="@+id/ic_menu_close"
        android:layout_marginStart="0dp"
        android:layout_toRightOf="@+id/ic_menu_close"
        android:fontFamily="@font/montserrat_regular"
        android:text="Acceptance Punch Points"
        android:textColor="@color/color1"
        android:textSize="@dimen/sp12" />

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp5"
            android:layout_width="match_parent"
            android:layout_weight=".7"
            android:layout_marginTop="@dimen/dp20"


            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight=".5"
                android:layout_width="match_parent"
                android:id="@+id/lnCloded"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:backgroundTint="@color/color1"
                    android:background="@color/color1"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"


                    android:elevation="@dimen/dp12"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="@dimen/dp40">

                    <TextView
                        android:layout_width="26dp"
                        android:text="3"
                        android:textColor="@color/white"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"

                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp5"></TextView>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                <TextView
                    android:paddingLeft="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:gravity="center"
                    android:layout_alignBaseline="@+id/ic_menu_close"


                    android:layout_marginStart="0dp"
                    android:layout_toRightOf="@+id/ic_menu_close"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Closed"
                    android:textColor="@color/color1"
                    android:textSize="@dimen/sp12" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                android:backgroundTint="#FF0000"
                android:background="#FF0000"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="center"

                android:elevation="@dimen/dp12"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="@dimen/dp40">

                <TextView
                    android:layout_width="26dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"

                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp5"></TextView>
            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            <TextView
                android:paddingLeft="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp30"
                android:gravity="center"
                android:layout_alignBaseline="@+id/ic_menu_close"


                android:layout_marginStart="0dp"
                android:layout_toRightOf="@+id/ic_menu_close"
                android:fontFamily="@font/montserrat_regular"
                android:text="Open"
                android:textColor="@color/color1"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout

            android:layout_weight="1.3"
            android:layout_marginTop="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/lnAddNew"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/ic_menu_close"
                    android:backgroundTint="@color/color1"
                    android:background="@color/color1"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"


                    android:elevation="@dimen/dp12"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="@dimen/dp40">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"

                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/add"></ImageView>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                <TextView
                    android:paddingLeft="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:gravity="center"
                    android:layout_alignBaseline="@+id/ic_menu_close"


                    android:layout_marginStart="0dp"
                    android:layout_toRightOf="@+id/ic_menu_close"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Add"
                    android:textColor="@color/color1"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>