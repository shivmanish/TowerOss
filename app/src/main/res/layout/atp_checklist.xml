<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_expansion_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_marginBottom="@dimen/dp15"
            android:id="@+id/collapsing_layout"
            android:background="@drawable/bg_expansion_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:background="@drawable/bg_expansion_bar"
                android:layout_weight="1"
                android:text="Link"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:layout_weight="1"
                android:text="Link Name"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:background="@drawable/bg_expansion_bar"

                android:layout_weight="1"
                android:id="@+id/item_title"
                android:text=""
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down_black"/>
        </LinearLayout>
        <View

            android:id="@+id/item_line"
            android:alpha="0.37"
            android:background="@color/transparent"
            android:layout_height="1dp"
            android:layout_width="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_margin="5dp"
        android:visibility="gone"
        android:id="@+id/item_collapse"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:gravity="center"
                    android:layout_alignBaseline="@+id/ic_menu_close"
                    android:layout_marginStart="0dp"
                    android:layout_toRightOf="@+id/ic_menu_close"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Acceptance Punch Points"
                    android:textColor="@color/color1"
                    android:textSize="@dimen/sp12" />

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_width="match_parent"
                        android:layout_weight=".7"
                        android:layout_marginTop="@dimen/dp20"

                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight=".5"
                            android:layout_width="match_parent"
                            android:id="@+id/lnCloded"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                                android:backgroundTint="@color/color1"
                                android:background="@color/color1"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"


                                android:elevation="@dimen/dp12"
                                android:innerRadius="0dp"
                                android:shape="ring"
                                android:thicknessRatio="1.9"
                                app:cardCornerRadius="@dimen/dp40">

                                <TextView
                                    android:layout_width="26dp"
                                    android:text="3"
                                    android:textColor="@color/white"
                                    android:layout_height="match_parent"
                                    android:gravity="center"

                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/dp5"></TextView>
                            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                            <TextView
                                android:paddingLeft="@dimen/dp10"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp30"
                                android:gravity="center"
                                android:layout_alignBaseline="@+id/ic_menu_close"


                                android:layout_marginStart="0dp"
                                android:layout_toRightOf="@+id/ic_menu_close"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Closed"
                                android:textColor="@color/color1"
                                android:textSize="@dimen/sp12" />
                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp10"
                                android:layout_weight=".5"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                                    android:backgroundTint="#FF0000"
                                    android:background="#FF0000"
                                    android:layout_width="@dimen/dp30"
                                    android:layout_height="@dimen/dp30"
                                    android:layout_gravity="center"

                                    android:elevation="@dimen/dp12"
                                    android:innerRadius="0dp"
                                    android:shape="ring"
                                    android:thicknessRatio="1.9"
                                    app:cardCornerRadius="@dimen/dp40">

                                    <TextView
                                        android:layout_width="26dp"
                                        android:text="3"
                                        android:textColor="@color/white"
                                        android:layout_height="match_parent"
                                        android:gravity="center"

                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/dp5"></TextView>
                                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                                <TextView
                                    android:paddingLeft="@dimen/dp10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/dp30"
                                    android:gravity="center"
                                    android:layout_alignBaseline="@+id/ic_menu_close"


                                    android:layout_marginStart="0dp"
                                    android:layout_toRightOf="@+id/ic_menu_close"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Open"
                                    android:textColor="@color/color1"
                                    android:textSize="@dimen/sp12" />
                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout

                        android:layout_weight="1.3"
                        android:layout_marginTop="@dimen/dp20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/lnAddNew"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                                android:id="@+id/ic_menu_close"
                                android:backgroundTint="@color/color1"
                                android:background="@color/color1"
                                android:layout_width="@dimen/dp30"
                                android:layout_height="@dimen/dp30"


                                android:elevation="@dimen/dp12"
                                android:innerRadius="0dp"
                                android:shape="ring"
                                android:thicknessRatio="1.9"
                                app:cardCornerRadius="@dimen/dp40">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentTop="true"

                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/dp5"
                                    android:src="@drawable/add"></ImageView>
                            </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                            <TextView
                                android:paddingLeft="@dimen/dp10"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp30"
                                android:gravity="center"
                                android:layout_alignBaseline="@+id/ic_menu_close"


                                android:layout_marginStart="0dp"
                                android:layout_toRightOf="@+id/ic_menu_close"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Add"
                                android:textColor="@color/color1"
                                android:textSize="@dimen/sp12" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>