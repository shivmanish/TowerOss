<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp5"
    android:elevation="@dimen/dp30"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_layout"
        android:background="@color/collapse_card_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_title_str"
                android:text="ODU"
                android:textSize="@dimen/dp14"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:textStyle="bold"
                android:background="@color/transparent"
                style="@style/RowTestItemEdit"
                android:gravity="center_vertical"
                android:textColor="@color/color1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp50"
                />
            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:src="@drawable/arrow_up_right_from_square_solid_1"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:background="@color/transparent"
                android:id="@+id/share_link"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp50"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:orientation="horizontal">
            <ImageView
                android:visibility="invisible"
                android:id="@+id/edit_list_item"
                android:layout_margin="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/dp11"
                android:layout_height="match_parent"
                android:src="@drawable/edit_ico_black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/item_title_dropdown"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/list_item_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down_black"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/item_line"
        android:alpha="2"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        android:background="@color/view_color"
        android:layout_height="1dp"
        android:layout_width="match_parent"/>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/item_collapse"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="10dp"
                android:layout_weight="4"
                android:id="@+id/add_items_layout_"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/dp5"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_gray" />
                <TextView
                    android:padding="5dp"
                    android:text="Closed"
                    android:textSize="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp10"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/color1"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:layout_marginLeft="@dimen/dp5"
                    android:id="@+id/add_items_layout_1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="5dp"
                        android:text="3"
                        android:textColor="@color/color1"
                        android:layout_marginRight="@dimen/dp5"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_2" />
                    <TextView
                        android:padding="5dp"
                        android:text="Open"
                        android:textSize="@dimen/dp15"
                        android:layout_marginRight="@dimen/dp10"
                        android:gravity="center"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/color1"
                        android:drawablePadding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:paddingBottom="@dimen/dp5"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:layout_weight="1"
                android:id="@+id/add_items_layout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/add_ico_white"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_gravity="center"
                    android:drawablePadding="10dp"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="20dp"
                    android:background="@drawable/circleblue_1" />
                <TextView
                    android:padding="5dp"
                    android:text="Add New"
                    android:textSize="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp10"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/color1"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>