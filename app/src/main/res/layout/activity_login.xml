<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_login"
    android:id="@+id/fragmentContainerView"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.88"
                android:layout_height="match_parent">

                <TextView
                    android:text="Login"
                    android:textSize="@dimen/dp28"
                    android:textColor="#ffffff"
                    android:id="@+id/login1"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp8"
                    android:fontFamily="@font/montserrat_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/request_msg"/>

                <TextView
                    android:text="Please enter you Login and your Password"
                    android:textSize="13sp"
                    android:textColor="#ffffff"
                    android:id="@+id/request_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp50"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/user_mail"/>

                <EditText
                    android:padding="@dimen/dp10"
                    android:text="Username or E-mail"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:id="@+id/user_mail"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableStart="@drawable/ic_profile_border"
                    android:layout_width="match_parent"
                    android:paddingStart="@dimen/dp10"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginBottom="@dimen/dp30"
                    android:background="@drawable/login_white_border"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/password"/>

                <EditText
                    android:padding="@dimen/dp10"
                    android:hint="Password"
                    android:textColorHint="@color/devider_grey"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:inputType="numberPassword"
                    android:id="@+id/password"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableStart="@drawable/ic_carbon_password"
                    android:layout_width="match_parent"
                    android:paddingStart="@dimen/dp10"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginBottom="@dimen/dp20"
                    android:background="@drawable/login_white_border"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/forgot_password"/>

                <TextView
                    android:text="Forgot password?"
                    android:textSize="13sp"
                    android:textColor="#ffffff"
                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginBottom="@dimen/dp25"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/login"/>

                <TextView
                    android:padding="@dimen/dp10"
                    android:text="Login"
                    android:textSize="15sp"
                    android:textColor="#F7CB46"
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="@dimen/dp45"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp30"
                    android:background="@drawable/login_yellow_border"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/sign_with_phone"/>

                <TextView
                    android:padding="@dimen/dp10"
                    android:text="Or sign-in with phone OTP"
                    android:textSize="15sp"
                    android:textColor="#3F4D68"
                    android:id="@+id/sign_with_phone"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="@dimen/dp45"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dp30"
                    android:background="@drawable/login_yellow_bg"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/already_have_account"/>

                <TextView
                    android:text="Not a member yet?"
                    android:textSize="13sp"
                    android:textColor="#ffffff"
                    android:id="@+id/already_have_account"
                    android:paddingBottom="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/text_register"/>

                <TextView
                    android:text="Register"
                    android:textSize="14sp"
                    android:textColor="#FFD72B"
                    android:id="@+id/text_register"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
