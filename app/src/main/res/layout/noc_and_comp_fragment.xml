<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:padding="@dimen/dp10">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="0dp">
      <LinearLayout
          android:id="@+id/addmore_items"
          android:layout_gravity="right"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
        <include
            layout="@layout/add_new_layout">

        </include>
      </LinearLayout>
      <androidx.recyclerview.widget.RecyclerView
          tools:itemCount="3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          tools:listitem="@layout/noc_list_item"
          android:orientation="vertical"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          android:id="@+id/customer_list"/>
  </LinearLayout>
  <com.google.android.material.card.MaterialCardView
      android:id="@+id/add_more"
      android:layout_width="@dimen/dp50"
      android:layout_height="@dimen/dp50"
      android:layout_marginEnd="@dimen/dp20"
      android:layout_marginBottom="@dimen/dp20"
      app:cardCornerRadius="@dimen/dp100"
      app:layout_constraintEnd_toEndOf="parent"
      app:cardBackgroundColor="#3D4E6D"
      app:cardElevation="2dp"
      app:strokeColor="@color/tab_deselected"
      app:strokeWidth="1dp"
      app:layout_constraintBottom_toBottomOf="parent">
    <ImageView
        android:padding="@dimen/dp12"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_new_menu_icon"/>
  </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>

