                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Revised Rent Amount" />

                    <EditText
                        android:id="@+id/editLastRevisedRent"
                        style="@style/RowTestItemEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/rupee_symbol"
                        android:hint="3,00,000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8"
                        android:alpha="0.37"
                        android:background="#263238" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EB Inclusive in Rental" />

                    <com.smarthub.baseapplication.widgets.CustomSpinner
                        android:id="@+id/spinEBinclusiveRental"
                        style="@style/SpinnerTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="On-Air" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8"
                        android:alpha="0.37"
                        android:background="#263238" />
                </LinearLayout>

                <LinearLayout
