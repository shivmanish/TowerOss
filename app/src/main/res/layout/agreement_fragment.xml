                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:text="EB Billing Basis                     %" />

                    <com.smarthub.baseapplication.widgets.CustomSpinner
                        android:id="@+id/spinEBBillingBasis"
                        style="@style/SpinnerTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="On-Air" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8"
                        android:alpha="0.37"
                        android:background="#263238" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="EB per unit Rate" />

                    <com.smarthub.baseapplication.widgets.CustomSpinner
                        android:id="@+id/spinunitRent"
                        style="@style/SpinnerTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="On-Air" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8"
                        android:alpha="0.37"
                        android:background="#263238" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:text="Property Ownership" />

                    <com.smarthub.baseapplication.widgets.CustomSpinner
                        android:id="@+id/propertyOwenership"
                        style="@style/SpinnerTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="On-Air" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8"
                        android:alpha="0.37"
                        android:background="#263238" />
                </LinearLayout>

                <LinearLayout
