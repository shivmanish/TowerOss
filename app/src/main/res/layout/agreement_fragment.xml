                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:text="Rooftop acquired Area" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/editRooftopacquiredArea"
                            style="@style/RowTestItemEdit"
