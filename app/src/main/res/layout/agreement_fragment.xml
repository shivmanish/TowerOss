                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Agreement Expiry Date" />

                    <TextView
                        android:id="@+id/txtExpiryDate"

                        style="@style/RowTestItemEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/icon_date"
                        android:text="27-Jun-22" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp8"
                        android:alpha="0.37"
                        android:background="#263238" />
                </LinearLayout>

                <LinearLayout
                    style="@style/ColumnItemInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/RowTextItemInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rent Payment Frequency" />

                    <com.smarthub.baseapplication.widgets.CustomSpinner
                        android:id="@+id/spinRentPaymentFrequency"
