<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_expansion_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout


            android:layout_marginBottom="@dimen/dp15"
            android:id="@+id/collapsing_layout"
            android:background="@drawable/bg_expansion_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:background="@drawable/bg_expansion_bar"
                android:id="@+id/item_title"
                android:text="Link Name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".5"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/icon_layout"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:gravity="end"


                app:layout_constraintStart_toEndOf="@+id/item_title"
                app:layout_constraintEnd_toStartOf="@+id/img_dropdown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_edit_menu"

                    android:paddingStart="@dimen/dp10"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView

                    android:src="@drawable/ic_delete"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/ic_menu_close"
                    android:backgroundTint="@color/color1"
                    android:background="@color/color1"
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"

                    android:elevation="@dimen/dp12"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="@dimen/dp40">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/add"></ImageView>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                <TextView
                    android:paddingLeft="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"

                    android:layout_alignBaseline="@+id/ic_menu_close"

                    android:layout_gravity="center_vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:layout_marginStart="0dp"
                    android:layout_toRightOf="@+id/ic_menu_close"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Add"
                    android:textColor="@color/color1"
                    android:textSize="@dimen/sp12" />

            </LinearLayout>
            <ImageView
                android:id="@+id/img_dropdown"
                android:src="@drawable/ic_arrow_down_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/item_line"
            android:alpha="0.37"
            android:background="@color/transparent"
            android:layout_height="1dp"
            android:layout_width="match_parent" />
    </LinearLayout>
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:id="@+id/item_collapse"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/includedLayout"
                layout="@layout/backhaul_consumablematerials">

            </include>

            <TextView
                android:layout_marginTop="@dimen/dp20"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp14"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="match_parent"

                android:text="Remarks:"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txtDate"


                android:layout_width="match_parent"

                android:text="wezrextdycvuhbjyfh"
                style="@style/RowTestItemEdit"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/dp12"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp14"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="match_parent"

                android:text="Attachments"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <include
                layout="@layout/layout_img_attachment"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/cancel_save_layout"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>