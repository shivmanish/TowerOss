<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_expansion_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_marginBottom="@dimen/dp15"
            android:id="@+id/collapsing_layout"
            android:background="@drawable/bg_expansion_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:background="@drawable/bg_expansion_bar"
                android:layout_weight="1"
                android:text="Link"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:layout_weight="1"
                android:text="Link Name"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:background="@drawable/bg_expansion_bar"

                android:layout_weight="1"
                android:id="@+id/item_title"
                android:text=""
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_arrow_down_black"/>
        </LinearLayout>
        <View
            android:id="@+id/item_line"
            android:alpha="0.37"
            android:background="@color/transparent"
            android:layout_height="1dp"
            android:layout_width="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:layout_margin="5dp"
        android:visibility="gone"
        android:id="@+id/item_collapse"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="@dimen/dp10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/includedLayout"
                layout="@layout/backhaul_consumablematerials">

            </include>

            <TextView
                android:layout_marginTop="@dimen/dp20"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp14"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="match_parent"

                android:text="Remarks:"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txtDate"


                android:layout_width="match_parent"

                android:text="wezrextdycvuhbjyfh"
                style="@style/RowTestItemEdit"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/dp12"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp14"
                android:fontFamily="@font/montserrat_regular"
                android:layout_width="match_parent"

                android:text="Attachments"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <include
                layout="@layout/layout_img_attachment"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/cancel_save_layout"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>