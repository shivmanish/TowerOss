<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:id="@+id/card"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/card_bg">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp15"
                android:paddingEnd="@dimen/dp15"
                android:paddingBottom="5dp">

                <ImageView
                    android:padding="@dimen/dp8"
                    android:id="@+id/back"
                    app:tint="@color/white"
                    android:src="@drawable/ic_back"
                    android:adjustViewBounds="true"
                    android:layout_width="@dimen/dp35"
                    android:layout_height="@dimen/dp35"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/dp30"
                    android:visibility="gone"
                    android:layout_height="@dimen/dp30"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dummy_network_call" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Reliance jio pvt ltd"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp18" />

                    <TextView
                        android:padding="2dp"
                        android:id="@+id/sub_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="#DEL-VIL-SC-0001"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp15" />

                    <LinearLayout
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Rooftop : 3000"
                            android:textColor="@color/milky_white"
                            android:textSize="@dimen/sp12" />
                        <View
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_width="1dp"
                            android:background="@color/white"
                            android:alpha="0.8"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/text8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Ground : "
                            android:textColor="@color/milky_white"
                            android:textSize="@dimen/sp12" />
                        <TextView
                            android:id="@+id/text9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="1000"
                            android:textColor="@color/milky_white"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/menu_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="3dp"
                    android:src="@drawable/dummy_3g" />

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="@dimen/dp24"
                    android:layout_height="@dimen/dp24"
                    android:paddingTop="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingLeft="@dimen/dp5"
                    android:rotation="90"
                    app:tint="@color/white"
                    android:src="@drawable/menu" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp35">
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="14sp"
                        android:text="Site ID:"
                        android:textColor="@color/milky_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="CE-MHMUMB-SC-A0123"
                        android:textSize="14dp"
                        android:paddingStart="5dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:gravity="right"
                    android:layout_weight="2"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="14sp"
                        android:text="RFI Date:"
                        android:textColor="@color/milky_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="10-Oct-2018"
                        android:textSize="14sp"
                        android:paddingStart="5dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp38"
        android:background="@color/tab_deselected"
        android:layout_gravity="start"
        app:tabPaddingEnd="@dimen/dp5"
        app:tabPaddingStart="@dimen/dp5"
        app:tabIndicatorHeight="3dp"
        app:tabMinWidth="@dimen/dp100"
        app:tabIndicatorColor="@color/yellow"
        app:tabMode="scrollable"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:tabTextAppearance="@style/TabTextView"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardElevation="2dp"
        android:background="@color/color2"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:background="@color/backgroun_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/add_more"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        app:cardCornerRadius="@dimen/dp100"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#3D4E6D"
        app:cardElevation="2dp"
        app:strokeColor="@color/tab_deselected"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:padding="@dimen/dp12"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_new_menu_icon"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>