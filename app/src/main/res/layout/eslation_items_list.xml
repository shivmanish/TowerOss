<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dp6"
    android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
        android:background="@drawable/lenearback"

        android:layout_centerInParent="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:background="@drawable/ronutcircle"

            android:id="@+id/card_add"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            app:cardCornerRadius="@dimen/dp60"
            app:cardBackgroundColor="@color/white">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                android:layout_gravity="center">

                <ImageView

                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@drawable/img_profile"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:paddingLeft="@dimen/dp10"     android:id="@+id/title"

            android:layout_toRightOf="@+id/card_add"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Umesh"

            android:gravity="top"
            />
        <TextView
            android:paddingRight="@dimen/dp20"
            android:drawableRight="@drawable/ic_menu"
            android:paddingLeft="@dimen/dp10"
            android:id="@+id/subtitle"

            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/card_add"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="(Admin)"

            android:gravity="top"
            />


    </RelativeLayout>
