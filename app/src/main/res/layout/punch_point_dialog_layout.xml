<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/blur"
        android:background="@drawable/dialog_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_marginRight="@dimen/dp25"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp15"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="@string/punch_point_creation"
                android:textColor="@color/normalTextColor"
                android:textSize="@dimen/sp18"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider_grey" />

            <LinearLayout
                android:background="#F1F1F1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/obeservation"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp14" />

                <EditText
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:textStyle="bold"
                    android:background="@drawable/bottom_line_bg"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingRight="@dimen/dp15"
                    android:paddingBottom="@dimen/dp10"
                    android:textColor="@color/normalTextColor"
                    android:hint="@string/type_here"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/dp14" />

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp25"
                    android:text="@string/recommendation"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp14" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:background="@drawable/bottom_line_bg"
                    android:fontFamily="@font/montserrat"
                    android:paddingRight="@dimen/dp15"
                    android:paddingBottom="@dimen/dp10"
                    android:gravity="bottom"
                    android:textColor="@color/normalTextColor"
                    android:hint="@string/type_here"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/dp14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp25"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/issue_type"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp12">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/spinner_item"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/bottom_line_bg"
                        android:paddingRight="@dimen/dp15"
                        android:paddingBottom="@dimen/dp10"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/dp14" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_alignParentRight="true"
                        app:tint="@color/normalTextColor"
                        android:layout_marginRight="@dimen/dp15"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp25"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/target_date"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/sp14" />

                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/calender"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingLeft="@dimen/dp5"
                    android:drawablePadding="5dp"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp15"
                    android:paddingBottom="@dimen/dp10"
                    android:textColor="@color/black"
                    android:background="@drawable/bottom_line_bg"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/submit"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp36"
                    android:layout_marginRight="@dimen/dp15"
                    android:background="@drawable/touch_background_button"
                    android:clickable="true"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10"
                    android:text="@string/submit_punch_point"
                    android:textColor="@color/white"
                    android:textColorHint="@color/search_setting"
                    android:textSize="@dimen/sp16" />


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>