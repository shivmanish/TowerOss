<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp10"
    android:paddingEnd="@dimen/dp5"
    android:paddingStart="@dimen/dp10"
    android:orientation="vertical">

    <CheckBox
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:text="Picture"
        android:id="@+id/picture_box"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp14" />

    <CheckBox
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:text="Document"
        android:id="@+id/document_box"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toBottomOf="@+id/picture_box"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp14" />

    <CheckBox
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:text="Remark"
        android:id="@+id/remark_box"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toBottomOf="@+id/document_box"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp14" />

    <EditText
        android:id="@+id/edit_remark"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remark_box"/>

    <TextView
        android:id="@+id/canecel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#3D4E6D"
        android:textSize="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp10"
        app:layout_constraintTop_toTopOf="@+id/btn_next"
        app:layout_constraintBottom_toBottomOf="@+id/btn_next"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"/>

    <TextView
        android:layout_marginLeft="@dimen/dp25"
        android:background="@drawable/yellow_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btn_next"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:textColor="#3D4E6D"
        android:textSize="@dimen/dp15"
        app:layout_constraintTop_toBottomOf="@+id/edit_remark"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>