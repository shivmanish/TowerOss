<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3D4E6D"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.home.HomeFragment">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:statusBarScrim="@android:color/transparent">
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp65"/>

                <!--        collapsable part    -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/toolbar"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/items"
                        android:padding="@dimen/dp10"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/btn_logo"
                            app:layout_constraintTop_toTopOf="parent"
                            android:adjustViewBounds="true"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/app_logo1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="@dimen/dp33"
                            android:layout_height="@dimen/dp33"
                            android:id="@+id/notification_layout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/btn_logo">
                            <ImageView
                                android:src="@drawable/ic_baseline_notifications_none_24"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="@dimen/dp15"
                                android:layout_height="@dimen/dp15"
                                app:cardBackgroundColor="@color/yellow"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="@dimen/dp3"
                                android:layout_marginTop="@dimen/dp3"
                                app:cardCornerRadius="@dimen/dp20">

                                <TextView
                                    android:text="2"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    style="@style/AutoResizeTextView"
                                    android:textColor="@color/color1"
                                    android:fontFamily="@font/poppins_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </com.google.android.material.card.MaterialCardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/search_box_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp48"
                            app:cardCornerRadius="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp15"
                            app:layout_constraintTop_toBottomOf="@+id/btn_logo"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:cardBackgroundColor="@color/search_background">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/search_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp10"
                                android:background="@android:color/transparent"
                                android:text="Search Your Site"
                                android:drawableEnd="@drawable/search"
                                android:drawableTint="#99ACCE"
                                android:paddingEnd="@dimen/dp20"
                                android:textSize="@dimen/dp15"
                                android:textColor="@color/search_star_color"
                                />
                        </com.google.android.material.card.MaterialCardView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/items_top"
                            app:layout_constraintTop_toBottomOf="@+id/search_box_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/l1"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="@dimen/dp15"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp60"
                                android:orientation="horizontal">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:id="@+id/c1"
                                    android:layout_marginEnd="@dimen/dp5"
                                    android:layout_weight="0.33"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="@dimen/dp10">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title1"
                                            android:textSize="12sp"
                                            android:textColor="#629BE5"
                                            android:text="Total RFI"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"/>
                                        <TextView
                                            android:id="@+id/total_rfi"
                                            android:textSize="18sp"
                                            android:textColor="#629BE5"
                                            android:text="0"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title1"
                                            app:layout_constraintStart_toStartOf="parent"/>

                                        <ImageView
                                            android:id="@+id/icon_rfi"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:src="@drawable/text_rfi"
                                            android:paddingEnd="@dimen/dp5"
                                            android:layout_margin="@dimen/dp5"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.33"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    app:cardCornerRadius="@dimen/dp10"
                                    app:layout_constraintWidth_percent="0.3">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title2"
                                            android:textSize="12sp"
                                            android:textColor="#50B6BA"
                                            android:text="On-Air"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"/>
                                        <TextView
                                            android:id="@+id/total_on_air"
                                            android:textSize="18sp"
                                            android:textColor="#50B6BA"
                                            android:text="0"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title2"
                                            app:layout_constraintStart_toStartOf="parent"/>

                                        <ImageView
                                            android:id="@+id/icon_air"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:src="@drawable/tower_card"
                                            android:paddingEnd="@dimen/dp5"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:cardCornerRadius="@dimen/dp10"
                                    android:layout_weight="0.33">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title3"
                                            android:textSize="12sp"
                                            android:textColor="#748892"
                                            android:text="In Progress"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"/>
                                        <TextView
                                            android:id="@+id/total_in_progress"
                                            android:textSize="18sp"
                                            android:textColor="#748892"
                                            android:text="0"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title3"
                                            app:layout_constraintStart_toStartOf="parent"/>

                                        <ImageView
                                            android:visibility="visible"
                                            android:id="@+id/icon_progress"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:src="@drawable/home_inprogress_icon"
                                            android:paddingEnd="@dimen/dp5"
                                            android:layout_margin="@dimen/dp5"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/l2"
                                android:layout_marginTop="@dimen/dp10"
                                app:layout_constraintTop_toBottomOf="@+id/l1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp60"
                                android:orientation="horizontal">
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:id="@+id/c4"
                                    android:layout_marginEnd="@dimen/dp5"
                                    android:layout_weight="0.33"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="@dimen/dp10">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title4"
                                            android:textSize="12sp"
                                            android:textColor="#E03B58"
                                            android:text="Faults"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"/>
                                        <TextView
                                            android:id="@+id/sub_title4"
                                            android:textSize="18sp"
                                            android:textColor="#E03B58"
                                            android:text="0"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title4"
                                            app:layout_constraintStart_toStartOf="parent"/>

                                        <ImageView
                                            android:visibility="visible"
                                            android:id="@+id/icon_faults"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:src="@drawable/home_faults_icon"
                                            android:paddingEnd="@dimen/dp5"
                                            android:layout_margin="@dimen/dp5"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.33"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    app:cardCornerRadius="@dimen/dp10"
                                    app:layout_constraintWidth_percent="0.3">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title5"
                                            android:textSize="12sp"
                                            android:textColor="#E6BE56"
                                            android:text="PM Due"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"/>
                                        <TextView
                                            android:id="@+id/sub_title5"
                                            android:textSize="18sp"
                                            android:textColor="#E6BE56"
                                            android:text="0"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title5"
                                            app:layout_constraintStart_toStartOf="parent"/>

                                        <ImageView
                                            android:id="@+id/icon_due"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:src="@drawable/ic_clock"
                                            android:paddingEnd="@dimen/dp5"
                                            android:layout_margin="@dimen/dp5"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:cardCornerRadius="@dimen/dp10"
                                    android:layout_weight="0.33"
                                    app:strokeWidth="1dp"
                                    android:visibility="invisible"
                                    android:id="@+id/add_new_site"
                                    app:strokeColor="@color/white"
                                    android:background="@color/transparent"
                                    app:cardBackgroundColor="#3D4E6D">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title6"
                                            android:textSize="12sp"
                                            android:textColor="#fff"
                                            android:text="Add New"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="0dp"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toEndOf="@+id/icon_add_site"/>
                                        <TextView
                                            android:id="@+id/sub_title6"
                                            android:textSize="18sp"
                                            android:textColor="#fff"
                                            android:text="Site"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="0dp"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title6"
                                            app:layout_constraintStart_toEndOf="@+id/icon_add_site"/>

                                        <ImageView
                                            android:id="@+id/icon_add_site"
                                            android:layout_width="@dimen/dp24"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="@dimen/dp5"
                                            app:layout_constraintStart_toStartOf="parent"
                                            android:src="@drawable/add_card"
                                            app:tint="#fff"
                                            android:layout_margin="@dimen/dp3"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp15"
                        android:paddingBottom="@dimen/dp10"
                        android:background="@drawable/dialog_bg"
                        app:layout_constraintTop_toBottomOf="@+id/items">

                       <TextView
                           android:text="My Task"
                           android:textColor="@color/black"
                           android:textSize="16sp"
                           android:id="@+id/task_title"
                           android:layout_marginStart="@dimen/dp15"
                           android:layout_marginTop="@dimen/dp15"
                           android:fontFamily="@font/poppins_medium"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tast_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:textColor="@color/color1"
                            android:text="0"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@+id/task_title"
                            app:layout_constraintTop_toTopOf="@+id/task_title"
                            app:layout_constraintStart_toEndOf="@+id/task_title"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <!--        non collapsable part    -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/task_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp15"
                    android:layout_marginVertical="@dimen/dp3"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="4"
                    tools:listitem="@layout/home_task_list_item" />

                <TextView
                    android:text="@string/See_all"
                    android:textSize="12sp"
                    android:id="@+id/see_all_task"
                    android:layout_marginEnd="@dimen/dp3"
                    android:layout_marginTop="@dimen/dp5"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="@+id/task_list"
                    app:layout_constraintTop_toBottomOf="@+id/task_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Open Faults"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/open_faults_title"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp8"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/see_all_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/open_fault_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:textColor="@color/color1"
                    android:text="0"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/open_faults_title"
                    app:layout_constraintTop_toTopOf="@+id/open_faults_title"
                    app:layout_constraintStart_toEndOf="@+id/open_faults_title"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/open_faluts_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/open_faults_title"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:id="@+id/work_in_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp50"
                        android:layout_marginStart="@dimen/dp5"
                        android:textColor="@color/color1"
                        android:text="Work In Progress...."
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:textSize="18sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ImageView
        android:id="@+id/add_more"
        android:adjustViewBounds="true"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        app:srcCompat="@drawable/ic_new_menu_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>