<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D4E6D"
    android:id="@+id/refresh_layout"
    tools:context=".ui.fragments.home.HomeFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:statusBarScrim="@android:color/transparent">
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp65"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/toolbar"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/items"
                        android:padding="@dimen/dp10"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/btn_logo"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/app_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="@dimen/dp35"
                            android:layout_height="@dimen/dp35"
                            android:id="@+id/notification_layout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/btn_logo">
                            <ImageView
                                android:src="@drawable/ic_baseline_notifications_none_24"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="@dimen/dp20"
                                android:layout_height="@dimen/dp20"
                                app:strokeWidth="@dimen/dp2"
                                app:strokeColor="@color/white"
                                app:cardBackgroundColor="@color/colorRed"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:cardCornerRadius="@dimen/dp20">

                                <TextView
                                    android:text="2"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    style="@style/AutoResizeTextView"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppins_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </com.google.android.material.card.MaterialCardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/search_box_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp48"
                            app:cardCornerRadius="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp15"
                            app:layout_constraintTop_toBottomOf="@+id/btn_logo"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:cardBackgroundColor="@color/search_background">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/search_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp10"
                                android:background="@android:color/transparent"
                                android:text="**_****_**_****"
                                android:drawableEnd="@drawable/search"
                                android:drawableTint="#99ACCE"
                                android:paddingEnd="@dimen/dp20"
                                android:textAppearance="?attr/textAppearanceHeadline6"
                                android:textColor="@color/search_star_color"
                                />
                        </com.google.android.material.card.MaterialCardView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/items_top"
                            app:layout_constraintTop_toBottomOf="@+id/search_box_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/l1"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="@dimen/dp15"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp60"
                                android:orientation="horizontal">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:id="@+id/c1"
                                    android:layout_marginEnd="@dimen/dp5"
                                    android:layout_weight="0.33"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="@dimen/dp10">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title1"
                                            android:textSize="12sp"
                                            android:textColor="#629BE5"
                                            android:text="Total RFI"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"/>
                                        <TextView
                                            android:id="@+id/total_rfi"
                                            android:textSize="18sp"
                                            android:textColor="#629BE5"
                                            android:text="100"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title1"
                                            app:layout_constraintStart_toStartOf="parent"/>

                                        <ImageView
                                            android:id="@+id/icon_rfi"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:src="@drawable/text_rfi"
                                            android:paddingEnd="@dimen/dp5"
                                            android:layout_margin="@dimen/dp3"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.33"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    app:cardCornerRadius="@dimen/dp10"
                                    app:layout_constraintWidth_percent="0.3">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title2"
                                            android:textSize="12sp"
                                            android:textColor="#50B6BA"
                                            android:text="On-Air"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"/>
                                        <TextView
                                            android:id="@+id/total_on_air"
                                            android:textSize="18sp"
                                            android:textColor="#50B6BA"
                                            android:text="55"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title2"
                                            app:layout_constraintStart_toStartOf="parent"/>

                                        <ImageView
                                            android:id="@+id/icon_air"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:src="@drawable/tower_card"
                                            android:paddingEnd="@dimen/dp5"
                                            android:layout_margin="@dimen/dp3"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_height="match_parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:cardCornerRadius="@dimen/dp10"
                                    android:layout_weight="0.33">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title3"
                                            android:textSize="12sp"
                                            android:textColor="#748892"
                                            android:text="In Progress"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"/>
                                        <TextView
                                            android:id="@+id/total_in_progress"
                                            android:textSize="18sp"
                                            android:textColor="#748892"
                                            android:text="100"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title3"
                                            app:layout_constraintStart_toStartOf="parent"/>

                                        <ImageView
                                            android:visibility="gone"
                                            android:id="@+id/icon_progress"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:src="@drawable/text_rfi"
                                            android:paddingEnd="@dimen/dp5"
                                            android:layout_margin="@dimen/dp3"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/l2"
                                android:layout_marginTop="@dimen/dp10"
                                app:layout_constraintTop_toBottomOf="@+id/l1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp60"
                                android:orientation="horizontal">
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:id="@+id/c4"
                                    android:layout_marginEnd="@dimen/dp5"
                                    android:layout_weight="0.33"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="@dimen/dp10">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title4"
                                            android:textSize="12sp"
                                            android:textColor="#E03B58"
                                            android:text="Faults"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"/>
                                        <TextView
                                            android:id="@+id/sub_title4"
                                            android:textSize="18sp"
                                            android:textColor="#E03B58"
                                            android:text="100"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title4"
                                            app:layout_constraintStart_toStartOf="parent"/>

                                        <ImageView
                                            android:visibility="gone"
                                            android:id="@+id/icon_faults"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:src="@drawable/text_rfi"
                                            android:paddingEnd="@dimen/dp5"
                                            android:layout_margin="@dimen/dp3"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.33"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    app:cardCornerRadius="@dimen/dp10"
                                    app:layout_constraintWidth_percent="0.3">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title5"
                                            android:textSize="12sp"
                                            android:textColor="#E6BE56"
                                            android:text="PM Due"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"/>
                                        <TextView
                                            android:id="@+id/sub_title5"
                                            android:textSize="18sp"
                                            android:textColor="#E6BE56"
                                            android:text="155"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title5"
                                            app:layout_constraintStart_toStartOf="parent"/>

                                        <ImageView
                                            android:id="@+id/icon_due"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:src="@drawable/ic_clock"
                                            android:paddingEnd="@dimen/dp5"
                                            android:layout_margin="@dimen/dp3"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="0dp"
                                    android:layout_marginStart="5dp"
                                    android:visibility="invisible"
                                    android:layout_height="match_parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:cardCornerRadius="@dimen/dp10"
                                    android:layout_weight="0.33">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/title6"
                                            android:textSize="12sp"
                                            android:textColor="#fff"
                                            android:text="Add New"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:layout_marginTop="@dimen/dp10"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textStyle="bold"
                                            android:layout_width="0dp"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintStart_toEndOf="@+id/icon_add_site"/>
                                        <TextView
                                            android:id="@+id/sub_title6"
                                            android:textSize="18sp"
                                            android:textColor="#fff"
                                            android:text="Site"
                                            android:maxLines="1"
                                            android:padding="0dp"
                                            android:paddingStart="@dimen/dp10"
                                            android:fontFamily="@font/poppins_bold"
                                            android:layout_width="0dp"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@+id/title6"
                                            app:layout_constraintStart_toEndOf="@+id/icon_add_site"/>

                                        <ImageView
                                            android:id="@+id/icon_add_site"
                                            android:layout_width="@dimen/dp24"
                                            android:layout_height="wrap_content"
                                            android:paddingStart="@dimen/dp5"
                                            app:layout_constraintStart_toStartOf="parent"
                                            android:src="@drawable/add_card"
                                            app:tint="#fff"
                                            android:layout_margin="@dimen/dp3"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </com.google.android.material.card.MaterialCardView>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp65"
                        android:layout_marginTop="@dimen/dp15"
                        android:background="@drawable/dialog_bg"
                        app:layout_constraintTop_toBottomOf="@+id/items">
                        <com.google.android.material.tabs.TabLayout
                            android:layout_width="0dp"
                            android:id="@+id/home_tab"
                            app:tabSelectedTextColor="@color/white"
                            app:tabTextColor="#7F8694"
                            android:layout_marginTop="@dimen/dp10"
                            app:tabTextAppearance="@style/TabHomeTextView"
                            app:tabIndicator="@color/transparent"
                            app:tabBackground="@drawable/home_tab_selector"
                            android:background="@drawable/home_tab_bg"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintWidth_percent="0.75"
                            android:layout_height="match_parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.smarthub.baseapplication.widgets.NonDragableViewPager
                android:layout_marginTop="@dimen/dp15"
                android:id="@+id/home_pager"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp550"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>