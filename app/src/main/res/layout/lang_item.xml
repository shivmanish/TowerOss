<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <View
        android:visibility="visible"
        android:id="@+id/item_overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/layout_item"
        android:layout_alignBottom="@+id/layout_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/language_item_overlay"
        />

    <LinearLayout
        android:id="@+id/layout_item"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lang_list_rounded_border">
        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:text="India"
            android:id="@+id/button"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:paddingStart="12dp"
            android:layout_width="0dp"
            android:enabled="true"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:drawableStart="@drawable/btn_lang_check"
            android:layout_height="wrap_content"
            android:textAppearance="@style/LanaguageSelectedText"/>

        <ImageView
            android:id="@+id/img_icon"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icon_lang"/>
    </LinearLayout>

</RelativeLayout>