<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.logs.LogsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:id="@+id/card"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/card_bg">

    <LinearLayout
        android:id="@id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp15"
        android:paddingEnd="@dimen/dp15"
        android:paddingBottom="5dp">

    <ImageView
        android:layout_marginLeft="@dimen/dp8"
        android:padding="@dimen/dp9"
        android:id="@+id/back"
        app:tint="@color/white"
        android:src="@drawable/ic_back"
        android:adjustViewBounds="true"
        android:layout_width="@dimen/dp35"
        android:layout_height="@dimen/dp35"/>

        <TextView
            android:id="@+id/title"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp8"
            android:text="Logs"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15" />
        <ImageView
            android:layout_gravity="end"
            app:tint="@color/white"
            android:src="@drawable/search_white"
            android:padding="@dimen/dp9"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            />
        <ImageView
            android:layout_gravity="end"
            app:tint="@color/white"
            android:src="@drawable/shape"
            android:padding="@dimen/dp9"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            />

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="Activity"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:drawableStart="@drawable/restore"
                android:drawableEnd="@drawable/xmlid_222_"
                android:drawablePadding="5dp"
                />
            <TextView
                android:paddingLeft="@dimen/dp15"
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Time"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:drawableStart="@drawable/clock"
                android:drawableEnd="@drawable/xmlid_222_"
                android:drawablePadding="5dp"
                />
            <TextView
                android:paddingLeft="@dimen/dp15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="Date"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:drawableStart="@drawable/vectorcalendar"
                android:drawableEnd="@drawable/xmlid_222_"
                android:drawablePadding="5dp"
                />
            <TextView
                android:paddingLeft="@dimen/dp15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="Users"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:drawableStart="@drawable/user"
                android:drawableEnd="@drawable/xmlid_222_"
                android:drawablePadding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv"
                    android:padding="@dimen/dp20"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/logs_card_item"
                    tools:itemCount="9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>