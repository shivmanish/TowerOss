<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingTop="@dimen/dp150">

    <ImageView
        android:id="@+id/canecl"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp25"
        android:background="@drawable/drawable_cross_back"
        android:padding="@dimen/dp5"
        android:src="@drawable/cross_ico"
        android:translationZ="@dimen/dp6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp5"
        android:translationZ="@dimen/dp5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:requiresFadingEdge="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/item_collapse_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp10">

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Make" />

                                <TextView
                                    android:id="@+id/battery_bank_make"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="."
                                    android:textColor="@color/black" />
                                <View
                                    android:alpha="0.37"
                                    android:background="#263238"
                                    android:layout_height="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/dp8" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Modal" />

                                <TextView
                                    android:id="@+id/battery_bank_modal"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="0"
                                    android:textColor="@color/black" />
                                <View
                                    android:alpha="0.37"
                                    android:background="#263238"
                                    android:layout_height="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/dp8" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Rating/ Capacity (KW)" />

                                <TextView
                                    android:id="@+id/battery_bank_Rating_capacity_kw"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="22"
                                    android:textColor="@color/black" />
                                <View
                                    android:alpha="0.37"
                                    android:background="#263238"
                                    android:layout_height="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/dp8" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Cabinet Size" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/battery_bank_cabinetsizel"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="L - "
                                            android:textColor="@color/black" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/battery_bank_cabinetsizeb"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text=" | B - "
                                            android:textColor="@color/black" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/battery_bank_cabinetsizeh"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text=" | H - "
                                            android:textColor="@color/black" />

                                    </LinearLayout>

                                </LinearLayout>
                                <View
                                    android:alpha="0.37"
                                    android:background="#263238"
                                    android:layout_height="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/dp8" />


                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Overall Weight (KG)" />

                                <TextView
                                    android:id="@+id/battery_bank_overall_weight_kg"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="22"
                                    android:textColor="@color/black" />
                                <View
                                    android:alpha="0.37"
                                    android:background="#263238"
                                    android:layout_height="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/dp8" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Owner Company" />

                                <TextView
                                    android:id="@+id/battery_bank_owner_company"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="Cloudextel"
                                    android:textColor="@color/black" />
                                <View
                                    android:alpha="0.37"
                                    android:background="#263238"
                                    android:layout_height="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/dp8" />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="User Company" />

                                <TextView
                                    android:id="@+id/battery_bank_user_company"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="Airtel"
                                    android:textColor="@color/black" />
                                <View
                                    android:alpha="0.37"
                                    android:background="#263238"
                                    android:layout_height="1dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="@dimen/dp8" />

                            </LinearLayout>


                        </GridLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/canecel_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="#3D4E6D"
                        android:textSize="@dimen/dp15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp25"
                        android:background="@drawable/yellow_text_button"
                        android:paddingLeft="@dimen/dp25"
                        android:paddingTop="@dimen/dp8"
                        android:paddingRight="@dimen/dp25"
                        android:paddingBottom="@dimen/dp8"
                        android:text="Update"
                        android:textColor="#3D4E6D"
                        android:textSize="@dimen/dp15" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>