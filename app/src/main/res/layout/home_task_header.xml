<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/over_due"
        android:textSize="18sp"
        android:textColor="#E03B58"
        android:text="250"
        android:maxLines="1"
        android:padding="0dp"
        android:layout_marginTop="@dimen/dp10"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/total_rfi"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="Over"
        android:maxLines="1"
        android:padding="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/over_due"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/status_title1"
        android:textSize="10sp"
        android:textColor="#9D9D9D"
        android:text="Due"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingStart="@dimen/dp3"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/total_rfi"
        app:layout_constraintTop_toTopOf="@+id/total_rfi"
        app:layout_constraintStart_toEndOf="@+id/total_rfi"/>

    <TextView
        android:id="@+id/now_due"
        android:textSize="18sp"
        android:textColor="#F4C22B"
        android:text="75"
        android:maxLines="1"
        android:padding="0dp"
        android:layout_marginTop="@dimen/dp10"
        android:paddingStart="@dimen/dp10"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp15"
        app:layout_constraintStart_toEndOf="@+id/status_title1"/>
    <TextView
        android:id="@+id/total_on_air"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="Now"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingStart="@dimen/dp10"
        android:fontFamily="@font/poppins_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/now_due"
        app:layout_constraintStart_toStartOf="@+id/now_due"/>
    <TextView
        android:id="@+id/status_title2"
        android:textSize="10sp"
        android:textColor="#9D9D9D"
        android:text="Due"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingStart="@dimen/dp3"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/total_on_air"
        app:layout_constraintTop_toTopOf="@+id/total_on_air"
        app:layout_constraintStart_toEndOf="@+id/total_on_air"/>

    <TextView
        android:id="@+id/next_due"
        android:textSize="18sp"
        android:textColor="#748892"
        android:text="75"
        android:maxLines="1"
        android:padding="0dp"
        android:layout_marginTop="@dimen/dp10"
        android:paddingStart="@dimen/dp10"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp15"
        app:layout_constraintStart_toEndOf="@+id/status_title2"/>
    <TextView
        android:id="@+id/total_in_progress"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="Next"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingStart="@dimen/dp10"
        android:fontFamily="@font/poppins_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/next_due"
        app:layout_constraintStart_toStartOf="@+id/next_due"/>
    <TextView
        android:id="@+id/status_title3"
        android:textSize="10sp"
        android:textColor="#9D9D9D"
        android:text="Due"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingStart="@dimen/dp3"
        android:fontFamily="@font/poppins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/total_in_progress"
        app:layout_constraintTop_toTopOf="@+id/total_in_progress"
        app:layout_constraintStart_toEndOf="@+id/total_in_progress"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/dp35"
        android:id="@+id/card_add"
        android:layout_height="@dimen/dp35"
        app:layout_constraintEnd_toStartOf="@+id/card_filter"
        app:cardCornerRadius="@dimen/dp5"
        app:cardBackgroundColor="#E9EEF7"
        android:layout_marginEnd="@dimen/dp10"
        app:layout_constraintTop_toTopOf="@+id/title1">

        <ImageView
            android:padding="@dimen/dp6"
            android:src="@drawable/add_card"
            app:tint="#3D4E6D"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/dp35"
        android:id="@+id/card_filter"
        android:layout_height="@dimen/dp35"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="@dimen/dp5"
        app:cardBackgroundColor="#E9EEF7"
        app:layout_constraintTop_toTopOf="@+id/title1">

        <ImageView
            android:padding="@dimen/dp6"
            android:src="@drawable/icon_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>