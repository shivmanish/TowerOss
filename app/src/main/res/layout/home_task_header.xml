<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/over_due"
            android:textSize="18sp"
            android:textColor="#E03B58"
            android:text="250"
            android:maxLines="1"
            android:padding="0dp"
            android:layout_marginTop="@dimen/dp10"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/total_rfi"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="Over"
            android:maxLines="1"
            android:padding="0dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/over_due"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/status_title1"
            android:textSize="10sp"
            android:textColor="#9D9D9D"
            android:text="Due"
            android:maxLines="1"
            android:padding="0dp"
            android:paddingStart="@dimen/dp3"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/total_rfi"
            app:layout_constraintTop_toTopOf="@+id/total_rfi"
            app:layout_constraintStart_toEndOf="@+id/total_rfi"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card1">
        <TextView
            android:id="@+id/now_due"
            android:textSize="18sp"
            android:textColor="#F4C22B"
            android:text="75"
            android:maxLines="1"
            android:padding="0dp"
            android:layout_marginTop="@dimen/dp10"
            android:paddingStart="@dimen/dp10"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp15"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/total_on_air"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="Now"
            android:maxLines="1"
            android:padding="0dp"
            android:paddingStart="@dimen/dp10"
            android:fontFamily="@font/poppins_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/now_due"
            app:layout_constraintStart_toStartOf="@+id/now_due"/>
        <TextView
            android:id="@+id/status_title2"
            android:textSize="10sp"
            android:textColor="#9D9D9D"
            android:text="Due"
            android:maxLines="1"
            android:padding="0dp"
            android:paddingStart="@dimen/dp3"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/total_on_air"
            app:layout_constraintTop_toTopOf="@+id/total_on_air"
            app:layout_constraintStart_toEndOf="@+id/total_on_air"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card2">
        <TextView
            android:id="@+id/next_due"
            android:textSize="18sp"
            android:textColor="#748892"
            android:text="75"
            android:maxLines="1"
            android:padding="0dp"
            android:layout_marginTop="@dimen/dp10"
            android:paddingStart="@dimen/dp10"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp15"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/total_in_progress"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="Next"
            android:maxLines="1"
            android:padding="0dp"
            android:paddingStart="@dimen/dp10"
            android:fontFamily="@font/poppins_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/next_due"
            app:layout_constraintStart_toStartOf="@+id/next_due"/>
        <TextView
            android:id="@+id/status_title3"
            android:textSize="10sp"
            android:textColor="#9D9D9D"
            android:text="Due"
            android:maxLines="1"
            android:padding="0dp"
            android:paddingStart="@dimen/dp3"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/total_in_progress"
            app:layout_constraintTop_toTopOf="@+id/total_in_progress"
            app:layout_constraintStart_toEndOf="@+id/total_in_progress"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:id="@+id/card_add"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card1"
        app:cardBackgroundColor="#E9EEF7">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp">
            <TextView
                android:text="Task"
                android:paddingEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@color/color1"
                android:drawableStart="@drawable/add"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>