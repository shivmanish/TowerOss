<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp5"
    android:elevation="@dimen/dp30"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_layout"
        android:background="@color/collapse_card_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp42">
            <TextView
                android:id="@+id/item_title_str"
                android:text="Equipments"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/dp14"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/color1"
                android:background="@color/transparent"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".7"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/img_edit"
                android:visibility="gone"
                android:src="@drawable/edit_ico_black"
                app:layout_constraintEnd_toStartOf="@id/img_dropdown"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/dp12"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/dp50"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/img_dropdown"
                android:src="@drawable/ic_arrow_down_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="@dimen/dp16"
                android:paddingEnd="@dimen/dp16"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/dp50"
                android:layout_height="40dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <View
        android:id="@+id/item_line"
        android:alpha="1"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        android:background="@color/view_color"
        android:layout_height="1dp"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/item_collapse"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:paddingBottom="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridLayout
                    android:visibility="visible"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Equipment Name" />

                        <TextView
                            android:id="@+id/EquipmentName"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="egsegt"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>
                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Serial Number" />

                        <TextView
                            android:id="@+id/SerialNumber"
                            android:layout_width="match_parent"
                            android:text="S3058940"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Make" />

                        <TextView
                            android:id="@+id/Make"
                            android:layout_width="match_parent"
                            android:text="xxxx"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>
                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Model" />

                        <TextView
                            android:id="@+id/Model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="xxxx"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rating/Capacity" />

                        <TextView
                            android:id="@+id/spinRationCapacity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="On-Air"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>
                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            android:text="Manufacturing Month/Year" />

                        <TextView
                            android:id="@+id/ManufacturingMonthYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nov/2018"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Warranty Period" />

                        <TextView
                            android:id="@+id/WarrantyPeriod"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="xxxx"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>
                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Warranty Expiry Date" />

                        <TextView
                            android:id="@+id/WarrantyExpiryDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10-Nov-22"
                            android:maxLength="10"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cabinet Size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="L:"
                                android:paddingRight="@dimen/dp2"
                                style="@style/RowTestItemEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="40"
                                android:maxLines="1"
                                android:ellipsize="marquee"
                                android:id="@+id/Cabinet_lenth"
                                style="@style/RowTestItemEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_marginTop="@dimen/dp3"
                                android:layout_marginRight="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginBottom="@dimen/dp4"
                                android:layout_gravity="center_vertical"
                                android:alpha="1"
                                android:background="@color/color1"
                                android:layout_height="match_parent"
                                android:layout_width="1dp"/>
                            <TextView
                                android:text="B:"
                                android:paddingRight="@dimen/dp2"
                                style="@style/RowTestItemEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="40"
                                android:maxLines="1"
                                android:ellipsize="marquee"
                                android:id="@+id/Cabinet_width"
                                style="@style/RowTestItemEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_marginTop="@dimen/dp3"
                                android:layout_marginRight="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginBottom="@dimen/dp4"
                                android:layout_gravity="center_vertical"
                                android:alpha="1"
                                android:background="@color/color1"
                                android:layout_height="match_parent"
                                android:layout_width="1dp"/>
                            <TextView
                                android:text="H:"
                                android:paddingRight="@dimen/dp2"
                                style="@style/RowTestItemEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="40"
                                android:maxLines="1"
                                android:ellipsize="marquee"
                                android:id="@+id/Cabinet_Height"
                                style="@style/RowTestItemEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Overall Weight(Kg)" />

                        <TextView
                            android:id="@+id/OverallWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Operating Temp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Min: "
                                android:paddingRight="@dimen/dp2"
                                style="@style/RowTestItemEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="40"
                                android:maxLines="1"
                                android:ellipsize="marquee"
                                android:id="@+id/min_operating_temp"
                                style="@style/RowTestItemEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_marginTop="@dimen/dp3"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="@dimen/dp4"
                                android:layout_gravity="center_vertical"
                                android:alpha="1"
                                android:background="@color/color1"
                                android:layout_height="match_parent"
                                android:layout_width="1dp"/>
                            <TextView
                                android:text="Max: "
                                android:paddingRight="@dimen/dp2"
                                style="@style/RowTestItemEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="40"
                                android:maxLines="1"
                                android:ellipsize="marquee"
                                android:id="@+id/Max_operation_temp"
                                style="@style/RowTestItemEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Max Power Rating(Kw)" />
                        <TextView
                            android:id="@+id/MaxPowerRating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            android:text="Installed Location Type" />

                        <TextView
                            android:id="@+id/InstalledLocationType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="On-Air"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>
                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location Mark" />

                        <TextView
                            android:id="@+id/Location_mark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mumbai thane"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rack ID" />

                        <TextView
                            android:id="@+id/InstallationPoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Smart Mile"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>
                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Owner Company" />

                        <TextView
                            android:id="@+id/OwnerCompany"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="On-Air"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User Company" />

                        <TextView
                            android:id="@+id/spinUserCompany"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp20"
                            android:text="On-Air"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            style="@style/RowTextviewItem" />
                    </LinearLayout>

                </GridLayout>
                <TextView
                    android:text="Remark"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/Remark"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:hint="Left Corner of Roof "
                    android:textSize="15sp"
                    style="@style/RowTestItemEdit"
                    android:text="xwerhtjyg"
                    android:layout_marginTop="@dimen/dp1"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>