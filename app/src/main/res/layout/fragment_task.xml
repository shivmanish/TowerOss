<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/iconBlack"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task List"
            android:textColor="@color/white"
            android:textSize="@dimen/dp17"
            android:id="@+id/title_text"
            android:layout_marginStart="@dimen/dp15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView

            android:id="@+id/camera"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:adjustViewBounds="true"
            android:src="@drawable/qr_scanner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/add_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.421" />

        <ImageView
            android:id="@+id/add_image"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:padding="@dimen/dp5"
            android:adjustViewBounds="true"
            android:src="@drawable/mic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.421"
            android:layout_marginEnd="@dimen/dp20"/>

        <ImageView
            android:id="@+id/search"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginRight="@dimen/dp10"
            android:padding="@dimen/dp5"
            android:adjustViewBounds="true"
            android:src="@drawable/search"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/camera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.421" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main_action_bar"
        android:id="@+id/add_new_layout"
        app:cardElevation="1dp"
        android:visibility="gone">

            <LinearLayout
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="10dp"
                android:id="@+id/add_item"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_gravity="center"
                    android:id="@+id/add_items"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circleblue_1" />
                <TextView
                    android:padding="5dp"
                    android:text="Add New"
                    android:textSize="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp10"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/color1"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:orientation="vertical"
        tools:itemCount="3"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/add_new_layout"
        android:id="@+id/list_item"
        tools:listitem="@layout/task_list_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/add_more"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        app:cardCornerRadius="@dimen/dp100"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="#3D4E6D"
        app:cardElevation="2dp"
        app:strokeColor="@color/tab_deselected"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:padding="@dimen/dp12"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_new_menu_icon"/>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>