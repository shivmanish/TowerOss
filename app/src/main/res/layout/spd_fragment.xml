                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/icon_date"
                            android:text="10-Nov-22" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Final Acceptance Date" />

                        <TextView
                                    android:textColor="@color/black"
                            android:id="@+id/editFinalDateAcceptance"
                            style="@style/RowTestItemEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/icon_date"
                            android:text="10-Nov-22" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/ColumnItemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Operational Status" />

                        <TextView
                            android:id="@+id/spinOperationalStatus"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp20"
                            android:text="On-Air" />

                    </LinearLayout>
                </GridLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rectangle_9"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp12"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight=".3"
                        android:gravity="start"
                        android:text="@string/po_details"
                        android:textColor="#3D4E6D" />

                    <TextView
                        android:id="@+id/txtAddCommersial"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"

                        android:layout_gravity="center|right"
                        android:layout_weight=".7"
                        android:background="@drawable/yellow_text_button"
                        android:drawableLeft="@drawable/add_ico"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="ADD"
                        android:textColor="@color/normalTextColor"
                        android:textSize="@dimen/sp12"
                        app:drawableLeftCompat="@drawable/add_ico" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.37"
                android:background="#263238" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/maintenance_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/expand_colaps_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_title_maintenance"
                        style="@style/RowTestItemEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:clickable="false"
                        android:padding="@dimen/dp15"
                        android:text="Maintenance" />

                    <ImageView
                        android:id="@+id/edit_maintenance"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp18"
                        android:src="@drawable/edit_fav_btn"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/maintenance_arrow"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_gravity="center_vertical"
                        android:clickable="false"
                        android:padding="@dimen/dp18"
                        android:src="@drawable/ic_arrow_down_black" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>