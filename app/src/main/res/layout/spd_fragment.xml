<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/collapsing_layout_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/equipment_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/expand_colaps_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_title_eqipment"
                        style="@style/RowTestItemEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:clickable="false"
                        android:padding="@dimen/dp15"
                        android:text="Equipment" />

                    <ImageView
                        android:id="@+id/equipment_edit"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp18"
                        android:src="@drawable/edit_fav_btn"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/equipment_arrow"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_gravity="center_vertical"
                        android:clickable="false"
                        android:padding="@dimen/dp18"
                        android:src="@drawable/ic_arrow_down_black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:id="@+id/item_collapse_equipment"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingBottom="@dimen/dp10"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Equipment Name" />

                                <TextView
                                    android:id="@+id/spinEquipmentName"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Serial Number" />

                                <TextView
                                    android:textColor="@color/black"
                                    android:id="@+id/editSerialNumber"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="S3058940" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Make" />

                                <TextView
                                    android:textColor="@color/black"
                                    android:id="@+id/editMake"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="xxxx" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Model" />

                                <TextView
                                    android:textColor="@color/black"
                                    android:id="@+id/editModel"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="xxxx" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Rating/Capacity" />

                                <TextView
                                    android:id="@+id/spinRationCapacity"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Manufacturing Month/Year" />

                                <TextView
                                    android:textColor="@color/black"
                                    android:id="@+id/editManufacturingMonthYear"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="Nov/2018" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Warranty Period" />
                                <TextView
                                    android:textColor="@color/black"
                                    android:id="@+id/editWarrantyPeriod"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="xxxx" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Warranty Expiry Date" />
                                <TextView
                                    android:textColor="@color/black"
                                    android:id="@+id/editWarrantyExpiryDate"
                                    android:drawableRight="@drawable/icon_date"
                                    style="@style/RowTestItemEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="10-Nov-22" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="SPD Type" />

                                <TextView
                                    android:id="@+id/spinSPDType"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Protection Mode" />

                                <TextView
                                    android:id="@+id/spinProtectionMode"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mounting Style" />

                                <TextView
                                    android:id="@+id/spinMountingStyle"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Installation Point" />

                                <TextView
                                    android:id="@+id/spinInstallationPoint"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Owner Company" />

                                <TextView
                                    android:id="@+id/spinOwnerCompany"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/ColumnItemInfo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/RowTextItemInfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Usage Type" />

                                <TextView
                                    android:id="@+id/spinUsageType"
                                    android:textColor="@color/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp20"
                                    android:text="On-Air" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:alpha="0.37"
                                    android:background="#00263238" />
                            </LinearLayout>

                        </GridLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/item_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.37"
                android:background="#263238" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/instanlation_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/expand_colaps_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_title_instalation"
                        style="@style/RowTestItemEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:clickable="false"
                        android:padding="@dimen/dp15"
                        android:text="Installation/ Acceptance" />

                    <ImageView
                        android:id="@+id/edit_instanlation"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp18"
                        android:src="@drawable/edit_fav_btn"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/instalation_arrow"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_gravity="center_vertical"
                        android:clickable="false"
                        android:padding="@dimen/dp18"
                        android:src="@drawable/ic_arrow_down_black" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_collapse_acceptance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp10">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            style="@style/ColumnItemInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Installation Vendor" />

                            <TextView
                                android:id="@+id/spinInstallationVendor"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp20"
                                android:text="On-Air"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/ColumnItemInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Installation Date" />

                            <TextView
                                    android:textColor="@color/black"
                                android:id="@+id/editInstallationDate"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/icon_date"

                                android:text="24" />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/ColumnItemInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/RowTextItemInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="Installation Executive Name" />

                            <TextView
                                    android:textColor="@color/black"
                                android:id="@+id/editExcutiveName"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:text="xxxx" />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/ColumnItemInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/RowTextItemInfo"
                                android:layout_width="5dp"
                                android:layout_height="6dp"
                                android:maxLines="1"
                                android:text="Installation Executive Num..." />

                            <TextView
                                    android:textColor="@color/black"
                                android:id="@+id/editExcutiveNum"
                                style="@style/RowTestItemEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/ic_call"
                                android:text="9890000009" />

                        </LinearLayout>


                    </GridLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:layout_gravity="center_vertical"
                    android:background="#f9f9f9"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp12">

                    <TextView
                        android:id="@+id/atp_checkli"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight=".3"
                        android:gravity="start"
                        android:text="ATP Checklist"
                        android:textColor="#3D4E6D" />

                    <TextView
                        android:id="@+id/addmore"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center|right"
                        android:layout_weight=".7"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:text="Continue"
                        android:textColor="@color/normalTextColor"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="vertical"
                    android:padding="@dimen/dp12">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_weight=".3"
                        android:gravity="start"
                        android:text="Acceptance Punch Points"
                        android:textColor="#3D4E6D" />

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/mark"
                                    android:layout_width="@dimen/dp30"
                                    android:layout_height="@dimen/dp30"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/roundedtextblack"
                                    android:gravity="center"
                                    android:text="4"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_marginLeft="@dimen/dp5"
                                    android:textSize="@dimen/dp12"
                                    android:fontFamily="@font/poppins_bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_toRightOf="@+id/mark"
                                    android:gravity="center_vertical"
                                    android:text=" Closed"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/mark2"
                                    android:layout_width="@dimen/dp30"
                                    android:layout_height="@dimen/dp30"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/roundedtextview_yellow"
                                    android:gravity="center"
                                    android:text="4"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_marginLeft="@dimen/dp5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|start"
                                    android:layout_toRightOf="@+id/mark2"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/dp12"
                                    android:text=" OPEN"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/add"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp40"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
