                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:background="@drawable/bg_expansion_bar"

                    android:gravity="center_vertical"
                    android:id="@+id/collapsing_layout_attachments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:background="@drawable/bg_expansion_bar"
                        android:drawablePadding="5dp"
                        android:layout_weight="1"
                        android:id="@+id/item_attachments"
                        android:text="Attachments"
                        android:paddingStart="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        style="@style/RowTestItemEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_arrow_down_black"/>
                </LinearLayout>

                <View

                    android:alpha="0.37"
                    android:background="#263238"
                    android:layout_height="1dp"
                    android:layout_width="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_margin="5dp"
                android:visibility="gone"
                android:id="@+id/item_collapse_attachments"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingBottom="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp15"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <GridLayout
                        android:columnCount="2"
                        android:layout_gravity="bottom"
                        android:foregroundGravity="bottom"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </GridLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        style="@style/ColumnItemInfo"
                        android:layout_height="wrap_content">
                        <include layout="@layout/layout_img_attachment"/>



                        <TextView
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Submit"
                            android:textSize="14sp"
                            android:layout_margin="@dimen/dp10"
                            android:gravity="center"
                            android:paddingTop="@dimen/dp10"
                            android:paddingBottom="@dimen/dp10"
                            android:backgroundTint="#3F4D67"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@drawable/login_yellow_bg"
                            app:layout_constraintTop_toBottomOf="@+id/items_list"/>

                        <View
                            android:alpha="0.37"
                            android:background="#263238"
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp8" />
                    </LinearLayout>





                </LinearLayout>
            </LinearLayout>






        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
