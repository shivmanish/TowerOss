<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/fragmentContainerView"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/login_bg"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp250"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.88"
        android:layout_height="match_parent">

        <TextView
            android:text="Sign In with OTP"
            android:textSize="26sp"
            android:textColor="#fff"
            android:id="@+id/forgot_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp50"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:text="@string/text_temp_4"
            android:textSize="13sp"
            android:textColor="#fff"
            android:id="@+id/text_msg"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp5"
            android:fontFamily="@font/montserrat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forgot_password_text"/>
        <LinearLayout
            android:id="@+id/mo_no_edit"
            android:alpha="0.87"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_marginTop="@dimen/dp30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_msg">

            <TextView
                android:id="@+id/country_code"
                android:text="code"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/sp13"
                android:padding="@dimen/dp10"
                android:drawableTint="@color/white"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/login_border"/>
            <TextView
                android:id="@+id/mobile_no"
                android:text=""
                android:gravity="center"
                android:layout_marginStart="@dimen/dp15"
                android:textSize="@dimen/sp16"
                android:paddingEnd="@dimen/dp10"
                android:drawableTint="@color/white"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp45"
                android:background="@drawable/flow_border"/>
        </LinearLayout>
        <TextView
            android:text="Didn't receive an OTP?"
            android:textSize="12sp"
            android:textColor="@color/disabledColor"
            android:id="@+id/one_time_otp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp40"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mo_no_edit"/>
        <LinearLayout
            android:id="@+id/otp_box"
            android:alpha="0.87"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/one_time_otp">

            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/p1"
                    android:maxLines="1"
                    android:ems="1"
                    android:text=""
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp7"
                    android:textSize="@dimen/dp20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_input"/>
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>
            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLines="1"
                    android:ems="1"
                    android:text=""
                    android:maxEms="1"
                    android:maxLength="1"
                    android:id="@+id/p2"
                    android:nextFocusLeft="@id/p1"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp7"
                    android:textSize="@dimen/dp20"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_input"/>
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>
            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:ems="1"
                    android:text=""
                    android:maxEms="1"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp7"
                    android:textSize="@dimen/dp20"
                    android:id="@+id/p3"
                    android:nextFocusLeft="@id/p2"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_input"/>
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>
            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLines="1"
                    android:ems="1"
                    android:text=""
                    android:maxEms="1"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp7"
                    android:textSize="@dimen/dp20"
                    android:id="@+id/p4"
                    android:nextFocusLeft="@id/p3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_input"/>
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>
            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLines="1"
                    android:ems="1"
                    android:text=""
                    android:maxEms="1"
                    android:nextFocusLeft="@id/p4"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp7"
                    android:textSize="@dimen/dp20"
                    android:id="@+id/p5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_input"/>
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>
            <com.smarthub.baseapplication.widgets.SquareLinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <EditText
                    android:maxLines="1"
                    android:ems="1"
                    android:text=""
                    android:maxEms="1"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_margin="@dimen/dp7"
                    android:textSize="@dimen/dp20"
                    android:id="@+id/p6"
                    android:nextFocusLeft="@id/p5"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_input"/>
            </com.smarthub.baseapplication.widgets.SquareLinearLayout>
        </LinearLayout>

        <TextView
            android:text="Enter a valid 4 digit OTP or resend OTP"
            android:textSize="13sp"
            android:textColor="#FF0000"
            android:id="@+id/validation_error"
            android:textAlignment="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/montserrat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otp_box"/>

        <TextView
            android:text="Didn't receive an OTP?"
            android:textSize="12sp"
            android:textColor="@color/disabledColor"
            android:id="@+id/mo_no_title"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp40"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/montserrat_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/validation_error"/>

        <TextView
            android:text="@string/resend_otp"
            android:textSize="13sp"
            android:textColor="@color/yellow"
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="@dimen/dp5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mo_no_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:id="@+id/next_layout"
            android:layout_marginTop="@dimen/dp60"
            android:text="Next"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/disabledColor"
            android:backgroundTint="@color/disabledColor"
            android:background="@drawable/login_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/error_message">

