<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginStart="@dimen/dp5"
    android:layout_marginEnd="@dimen/dp10"
    android:layout_marginTop="@dimen/dp4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:visibility="visible"
        android:id="@+id/file_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp5"
        app:cardElevation="1dp"
        android:padding="@dimen/dp5"
        app:strokeWidth="1dp"
        app:strokeColor="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@+id/message_layout"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dp5"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:id="@+id/file_ico"
                android:src="@drawable/file_ico"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File.Doc"
                android:textStyle="bold"
                android:textColor="@color/color1"
                android:paddingLeft="@dimen/dp5"
                android:textSize="11sp"
                android:layout_marginStart="@dimen/dp5"
                android:fontFamily="@font/poppins"
                app:layout_constraintStart_toEndOf="@id/file_ico"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2 MB"
                android:textStyle="bold"
                android:paddingLeft="@dimen/dp5"
                android:textSize="11sp"
                android:layout_marginStart="@dimen/dp5"
                android:fontFamily="@font/poppins"
                app:layout_constraintStart_toEndOf="@id/file_ico"
                app:layout_constraintTop_toBottomOf="@id/file_name"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:padding="@dimen/dp5"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajay"
            android:textStyle="bold"
            android:textColor="@color/search_background"
            android:textSize="14sp"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="has assigned a Task to You"
            android:textStyle="bold"
            android:textColor="@color/notificationText"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/dp4"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/message_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>