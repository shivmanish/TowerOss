<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/white"
android:id="@+id/fragmentContainerView"
xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.88"
            android:layout_height="match_parent">

            <TextView
                android:text="Verification Code"
                android:textSize="16sp"
                android:textColor="#DE000000"
                android:id="@+id/forgot_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp50"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:text="@string/text_temp_4"
                android:textSize="13sp"
                android:textColor="#8A000000"
                android:id="@+id/text_msg"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp20"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginTop="@dimen/dp30"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forgot_password_text"/>

            <LinearLayout
                android:id="@+id/mo_no_edit"
                android:alpha="0.87"
                android:weightSum="6"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_msg">

                <com.smarthub.baseapplication.widgets.SquareLinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/p1"
                        android:maxLines="1"
                        android:ems="1"
                        android:text=""
                        android:maxEms="1"
                        android:maxLength="1"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp7"
                        android:textSize="@dimen/dp20"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/password_box"/>
                </com.smarthub.baseapplication.widgets.SquareLinearLayout>
                <com.smarthub.baseapplication.widgets.SquareLinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <EditText
                        android:maxLines="1"
                        android:ems="1"
                        android:text=""
                        android:maxEms="1"
                        android:maxLength="1"
                        android:id="@+id/p2"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp7"
                        android:textSize="@dimen/dp20"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/password_box"/>
                </com.smarthub.baseapplication.widgets.SquareLinearLayout>
                <com.smarthub.baseapplication.widgets.SquareLinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <EditText
                        android:ems="1"
                        android:text=""
                        android:maxEms="1"
                        android:maxLength="1"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp7"
                        android:textSize="@dimen/dp20"
                        android:id="@+id/p3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/password_box"/>
                </com.smarthub.baseapplication.widgets.SquareLinearLayout>
                <com.smarthub.baseapplication.widgets.SquareLinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <EditText
                        android:maxLines="1"
                        android:ems="1"
                        android:text=""
                        android:maxEms="1"
                        android:maxLength="1"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp7"
                        android:textSize="@dimen/dp20"
                        android:id="@+id/p4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/password_box"/>
                </com.smarthub.baseapplication.widgets.SquareLinearLayout>
                <com.smarthub.baseapplication.widgets.SquareLinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <EditText
                        android:maxLines="1"
                        android:ems="1"
                        android:text=""
                        android:maxEms="1"
                        android:maxLength="1"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp7"
                        android:textSize="@dimen/dp20"
                        android:id="@+id/p5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/password_box"/>
                </com.smarthub.baseapplication.widgets.SquareLinearLayout>
                <com.smarthub.baseapplication.widgets.SquareLinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <EditText
                        android:maxLines="1"
                        android:ems="1"
                        android:text=""
                        android:maxEms="1"
                        android:maxLength="1"
                        android:gravity="center"
                        android:layout_margin="@dimen/dp7"
                        android:textSize="@dimen/dp20"
                        android:id="@+id/p6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/password_box"/>
                </com.smarthub.baseapplication.widgets.SquareLinearLayout>
            </LinearLayout>

            <TextView
                android:text="Didn't receive an OTP?"
                android:textSize="12sp"
                android:textColor="#8A000000"
                android:id="@+id/mo_no_title"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp50"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/montserrat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mo_no_edit"/>

            <TextView
                android:text="@string/resend_otp"
                android:textSize="13sp"
                android:textColor="#000"
                android:id="@+id/error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="@dimen/dp25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mo_no_title"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3D4E6D"
                android:id="@+id/next_layout"
                android:layout_marginTop="@dimen/dp60"
                android:background="@drawable/login_yellow_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/error_message">

                <TextView
                    android:padding="@dimen/dp10"
                    android:text="Next"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/bt_next"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp50"
                    android:gravity="center"
                    android:backgroundTint="#3D4E6D"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableTint="#fff"
                    android:drawableEnd="@drawable/arrow_farword"
                    android:background="@drawable/login_yellow_bg"
                    android:fontFamily="@font/montserrat"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>