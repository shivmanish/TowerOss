                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Roundation Size"
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:text="32x52x41"
                            style="@style/RowTestItemEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:alpha="0.37"
                            android:background="#263238"
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp8" />

                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="0dp"
                        android:layout_width="0dp"
                        style="@style/ColumnItemInfo"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Tower Leg Count"
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="3"
                            style="@style/RowTestItemEdit"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            android:drawableEnd="@drawable/down_arrow"
                            android:paddingRight="@dimen/dp5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:alpha="0.37"
                            android:background="#263238"
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp8" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="0dp"
                        android:layout_width="0dp"
                        style="@style/ColumnItemInfo"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Owner Compnay"
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Cloudextel"
                            style="@style/RowTestItemEdit"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            android:drawableEnd="@drawable/down_arrow"
                            android:paddingRight="@dimen/dp5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <View
                            android:alpha="0.37"
                            android:background="#263238"
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp8" />
                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="0dp"
                        android:layout_width="0dp"
                        style="@style/ColumnItemInfo"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="User Company"
                            style="@style/RowTextItemInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Airtel"
                            style="@style/RowTestItemEdit"
                            android:maxLines="1"
                            android:ellipsize="marquee"
                            android:drawableEnd="@drawable/down_arrow"
                            android:paddingRight="@dimen/dp5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <View
                            android:alpha="0.37"
                            android:background="#263238"
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp8" />
                    </LinearLayout>

                </GridLayout>
                <TextView
                    android:text="Location Mark"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    style="@style/RowTextItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:hint="Left Corner of Roof "
                    android:textSize="15sp"
                    style="@style/RowTestItemEdit"
                    android:text="xwerhtjyg"
                    android:layout_marginTop="@dimen/dp1"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:alpha="0.37"
                    android:background="#263238"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/dp8"
                    android:layout_marginLeft="@dimen/dp8"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp8" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
