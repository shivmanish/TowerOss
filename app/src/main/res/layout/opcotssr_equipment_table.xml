<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp5"
    android:elevation="@dimen/dp30"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_layout"
        android:background="@color/collapse_card_bg"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collapsing_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp42">
            <TextView
                android:id="@+id/item_title_str"
                android:text="Equipments"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/dp14"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@color/color1"
                android:background="@color/transparent"
                style="@style/RowTestItemEdit"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".7"
                android:layout_height="match_parent"/>


            <ImageView
                android:id="@+id/img_add"
                android:visibility="gone"
                android:src="@drawable/add_ico"
                app:layout_constraintEnd_toStartOf="@id/img_dropdown"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/dp12"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/dp50"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/img_dropdown"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_arrow_down_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="@dimen/dp16"
                android:paddingEnd="@dimen/dp16"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/dp50"
                android:layout_height="40dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <View
        android:id="@+id/item_line"
        android:alpha="1"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        android:background="@color/view_color"
        android:layout_height="1dp"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/item_collapse"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_layout">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:textStyle="bold"
                android:text="Technology"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:text="Equipment"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:layout_marginLeft="@dimen/dp10"
                android:text="Type"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight="1.3"
                android:textColor="@color/black"
                android:textSize="@dimen/dp13"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="0dp"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:text="Size(cm)"
                android:gravity="center"
                style="@style/RowTextItemInfo"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/opcotssr_Equipment_tables"
            android:orientation="vertical"
            tools:listitem="@layout/opcotssr_equipment_table_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>