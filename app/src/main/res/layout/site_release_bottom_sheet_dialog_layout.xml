                        android:layout_height="@dimen/dp50"
                        android:layout_centerHorizontal="true"
                        android:background="@color/black"
                        android:elevation="@dimen/dp12"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="@dimen/dp50"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/circle_color"
                            android:padding="@dimen/dp14"
                            android:src="@drawable/ic_menu_open_faults"></ImageView>
                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <TextView
                        style="@style/RowTestItemEdit"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_open_faults"


                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:text="Open faults" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp0.5"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"


                    android:layout_weight="1"
                    android:background="@drawable/bg_menu"
                    android:gravity="center_vertical">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                        android:id="@+id/ic_pm_tsk"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_centerHorizontal="true"
                        android:background="@color/black"
                        android:elevation="@dimen/dp12"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="@dimen/dp50"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/circle_color"
                            android:padding="@dimen/dp14"
                            android:src="@drawable/ic_menu_pm_task"></ImageView>
                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <TextView
                        style="@style/RowTestItemEdit"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_pm_tsk"


                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:text="PM tsk" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp0.5"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"


                    android:layout_weight="1"
                    android:background="@drawable/bg_menu"
                    android:gravity="center_vertical">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                        android:id="@+id/ic_card_attachment"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_centerHorizontal="true"
                        android:background="@color/black"
                        android:elevation="@dimen/dp12"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="@dimen/dp50"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/circle_color"
                            android:padding="@dimen/dp14"
                            android:src="@drawable/ic_attachment"></ImageView>
                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <TextView
                        style="@style/RowTestItemEdit"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_card_attachment"


                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:text="Attachment" />
                </RelativeLayout>



            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp0.5"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:background="@drawable/bg_menu"
                    android:gravity="center_vertical">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                        android:id="@+id/ic_menu_escalations"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_centerHorizontal="true"
                        android:background="@color/black"
                        android:elevation="@dimen/dp12"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="@dimen/dp50"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/circle_color"
                            android:padding="@dimen/dp14"
                            android:src="@drawable/ic_menu_escalations"></ImageView>
                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <TextView
                        style="@style/RowTestItemEdit"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_menu_escalations"


                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:text="Escalation" />
                </RelativeLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp0.5"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:background="@drawable/bg_menu"
                    android:gravity="center_vertical">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                        android:id="@+id/ic_menu_logs"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_centerHorizontal="true"
                        android:background="@color/black"
                        android:elevation="@dimen/dp12"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="@dimen/dp50"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/circle_color"
                            android:padding="@dimen/dp14"
                            android:src="@drawable/ic_menu_logs"></ImageView>
                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <TextView
                        style="@style/RowTestItemEdit"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_menu_logs"


                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:text="Logs" />
                </RelativeLayout>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp0.5"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:background="@drawable/bg_menu"
                    android:gravity="center_vertical">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_centerHorizontal="true"
                        android:background="@color/black"
                        android:elevation="@dimen/dp12"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="@dimen/dp50"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/circle_color"
                            android:padding="@dimen/dp14"
                            android:src="@drawable/ic_menu_logs"></ImageView>
                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

