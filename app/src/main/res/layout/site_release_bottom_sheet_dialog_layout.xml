<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dp15"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/shareLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

<LinearLayout
    android:gravity="end"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/ic_menu_close"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:background="@color/white"
        android:elevation="@dimen/dp12"

        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="@dimen/dp40"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="end"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_menu_close"></ImageView>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp0.5"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"


                    android:layout_weight="1"
                    android:background="@drawable/bg_menu"
                    android:gravity="center_vertical">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                        android:id="@+id/ic_menu_call"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_centerHorizontal="true"
                        android:background="@color/black"
                        android:elevation="@dimen/dp12"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="@dimen/dp50"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/circle_color"
                            android:padding="@dimen/dp14"
                            android:src="@drawable/ic_call"></ImageView>
                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <TextView
                        style="@style/RowTestItemEdit"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_menu_call"


                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:text="Call" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp0.5"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"


                    android:layout_weight="1"
                    android:background="@drawable/bg_menu"
                    android:gravity="center_vertical">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                        android:id="@+id/ic_map_view"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_centerHorizontal="true"
                        android:background="@color/black"
                        android:elevation="@dimen/dp12"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="@dimen/dp50"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/circle_color"
                            android:padding="@dimen/dp14"
                            android:src="@drawable/ic_menu_map"></ImageView>
                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <TextView
                        style="@style/RowTestItemEdit"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_map_view"


                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:text="Map View" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp0.5"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"


                    android:layout_weight="1"
                    android:background="@drawable/bg_menu"
                    android:gravity="center_vertical">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                        android:id="@+id/ic_alert"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_centerHorizontal="true"
                        android:background="@color/black"
                        android:elevation="@dimen/dp12"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="@dimen/dp50"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/circle_color"
                            android:padding="@dimen/dp14"
                            android:src="@drawable/ic_menu_map"></ImageView>
                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <TextView
                        style="@style/RowTestItemEdit"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_alert"


                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:text="Map View" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_gravity="start"

                    android:layout_weight="1"
                    android:background="@drawable/bg_menu"
                    android:gravity="center_vertical">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

                        android:id="@+id/ic_send_alert"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp50"
                        android:layout_centerHorizontal="true"
                        android:background="@color/black"
                        android:elevation="@dimen/dp12"
                        android:innerRadius="0dp"

                        android:shape="ring"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="40dp">

                        <ImageView
                            android:layout_width="match_parent"

                            android:layout_height="@dimen/dp50"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/circle_color"
                            android:padding="@dimen/dp14"
                            android:src="@drawable/ic_menu_send_alert"></ImageView>
                    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                    <TextView
                        style="@style/RowTestItemEdit"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ic_send_alert"
                        android:layout_centerHorizontal="true"


                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:paddingEnd="@dimen/dp10"
                        android:text="Send Alert" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp0.5"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dp5"
                app:cardElevation="@dimen/dp5">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="start"


                    android:layout_weight="1"
                    android:background="@drawable/bg_menu"
                    android:gravity="center_vertical">

                    <com.google.android.material.circularreveal.cardview.CircularRevealCardView

